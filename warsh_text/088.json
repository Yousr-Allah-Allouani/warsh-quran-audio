{
  "surah_number": 88,
  "name": "اُ۬لْغَٰشِيَةِ",
  "number_of_ayahs": 26,
  "ayahs": [
    {
      "ayah_number": 1,
      "text": "هَلَ اَت۪يٰكَ حَدِيثُ اُ۬لْغَٰشِيَةِۖ"
    },
    {
      "ayah_number": 2,
      "text": "وُجُوهٞ يَوْمَئِذٍ خَٰشِعَةٌ"
    },
    {
      "ayah_number": 3,
      "text": "عَامِلَةٞ نَّاصِبَةٞ"
    },
    {
      "ayah_number": 4,
      "text": "تَصْلَىٰ نَاراً حَامِيَةٗ"
    },
    {
      "ayah_number": 5,
      "text": "تُسْق۪ىٰ مِنْ عَيْنٍ اٰنِيَةٖۖ"
    },
    {
      "ayah_number": 6,
      "text": "لَّيْسَ لَهُمْ طَعَامٌ اِلَّا مِن ضَرِيعٖ"
    },
    {
      "ayah_number": 7,
      "text": "لَّا يُسْمِنُ وَلَا يُغْنِے مِن جُوعٖۖ"
    },
    {
      "ayah_number": 8,
      "text": "وُجُوهٞ يَوْمَئِذٖ نَّاعِمَةٞ"
    },
    {
      "ayah_number": 9,
      "text": "لِّسَعْيِهَا رَاضِيَةٞ"
    },
    {
      "ayah_number": 10,
      "text": "فِے جَنَّةٍ عَالِيَةٖ"
    },
    {
      "ayah_number": 11,
      "text": "لَّا تُسْمَعُ فِيهَا لَٰغِيَةٞۖ"
    },
    {
      "ayah_number": 12,
      "text": "فِيهَا عَيْنٞ جَارِيَةٞۖ"
    },
    {
      "ayah_number": 13,
      "text": "فِيهَا سُرُرٞ مَّرْفُوعَةٞ"
    },
    {
      "ayah_number": 14,
      "text": "وَأَكْوَابٞ مَّوْضُوعَةٞ"
    },
    {
      "ayah_number": 15,
      "text": "وَنَمَارِقُ مَصْفُوفَةٞ"
    },
    {
      "ayah_number": 16,
      "text": "وَزَرَابِيُّ مَبْثُوثَةٌۖ"
    },
    {
      "ayah_number": 17,
      "text": "اَفَلَا يَنظُرُونَ إِلَى اَ۬لِابِلِ كَيْفَ خُلِقَتْ"
    },
    {
      "ayah_number": 18,
      "text": "وَإِلَى اَ۬لسَّمَآءِ كَيْفَ رُفِعَتْ"
    },
    {
      "ayah_number": 19,
      "text": "وَإِلَى اَ۬لْجِبَالِ كَيْفَ نُصِبَتْ"
    },
    {
      "ayah_number": 20,
      "text": "وَإِلَى اَ۬لَارْضِ كَيْفَ سُطِحَتْۖ"
    },
    {
      "ayah_number": 21,
      "text": "فَذَكِّرِ اِنَّمَآ أَنتَ مُذَكِّرٞۖ"
    },
    {
      "ayah_number": 22,
      "text": "لَّسْتَ عَلَيْهِم بِمُصَيْطِرٍۖ"
    },
    {
      "ayah_number": 23,
      "text": "اِلَّا مَن تَوَلّ۪ىٰ وَكَفَرَ"
    },
    {
      "ayah_number": 24,
      "text": "فَيُعَذِّبُهُ اُ۬للَّهُ اُ۬لْعَذَابَ اَ۬لَاكْبَرَۖ"
    },
    {
      "ayah_number": 25,
      "text": "إِنَّ إِلَيْنَآ إِيَابَهُمْ"
    },
    {
      "ayah_number": 26,
      "text": "ثُمَّ إِنَّ عَلَيْنَا حِسَابَهُمْۖ"
    }
  ]
}