{
  "surah_number": 81,
  "name": "اُ۬لتَّكْوِيرِ",
  "number_of_ayahs": 29,
  "ayahs": [
    {
      "ayah_number": 1,
      "text": "إِذَا اَ۬لشَّمْسُ كُوِّرَتْ"
    },
    {
      "ayah_number": 2,
      "text": "وَإِذَا اَ۬لنُّجُومُ اُ۪نكَدَرَتْ"
    },
    {
      "ayah_number": 3,
      "text": "وَإِذَا اَ۬لْجِبَالُ سُيِّرَتْ"
    },
    {
      "ayah_number": 4,
      "text": "وَإِذَا اَ۬لْعِشَارُ عُطِّلَتْ"
    },
    {
      "ayah_number": 5,
      "text": "وَإِذَا اَ۬لْوُحُوشُ حُشِرَتْ"
    },
    {
      "ayah_number": 6,
      "text": "وَإِذَا اَ۬لْبِحَارُ سُجِّرَتْ"
    },
    {
      "ayah_number": 7,
      "text": "وَإِذَا اَ۬لنُّفُوسُ زُوِّجَتْ"
    },
    {
      "ayah_number": 8,
      "text": "وَإِذَا اَ۬لْمَوْءُۥدَةُ سُئِلَتْ"
    },
    {
      "ayah_number": 9,
      "text": "بِأَيِّ ذَنۢبٖ قُتِلَتْ"
    },
    {
      "ayah_number": 10,
      "text": "وَإِذَا اَ۬لصُّحُفُ نُشِرَتْ"
    },
    {
      "ayah_number": 11,
      "text": "وَإِذَا اَ۬لسَّمَآءُ كُشِطَتْ"
    },
    {
      "ayah_number": 12,
      "text": "وَإِذَا اَ۬لْجَحِيمُ سُعِّرَتْ"
    },
    {
      "ayah_number": 13,
      "text": "وَإِذَا اَ۬لْجَنَّةُ أُزْلِفَتْ"
    },
    {
      "ayah_number": 14,
      "text": "عَلِمَتْ نَفْسٞ مَّآ أَحْضَرَتْۖ"
    },
    {
      "ayah_number": 15,
      "text": "فَلَآ أُقْسِمُ بِالْخُنَّسِ"
    },
    {
      "ayah_number": 16,
      "text": "اِ۬لْجَوَارِ اِ۬لْكُنَّسِ"
    },
    {
      "ayah_number": 17,
      "text": "وَاليْلِ إِذَا عَسْعَسَ"
    },
    {
      "ayah_number": 18,
      "text": "وَالصُّبْحِ إِذَا تَنَفَّسَ"
    },
    {
      "ayah_number": 19,
      "text": "إِنَّهُۥ لَقَوْلُ رَسُولٖ كَرِيمٖ"
    },
    {
      "ayah_number": 20,
      "text": "ذِے قُوَّةٍ عِندَ ذِے اِ۬لْعَرْشِ مَكِينٖ"
    },
    {
      "ayah_number": 21,
      "text": "مُّطَاعٖ ثَمَّ أَمِينٖۖ"
    },
    {
      "ayah_number": 22,
      "text": "وَمَا صَٰحِبُكُم بِمَجْنُونٖۖ"
    },
    {
      "ayah_number": 23,
      "text": "وَلَقَدْ ر۪ء۪اهُ بِالُافُقِ اِ۬لْمُبِينِۖ"
    },
    {
      "ayah_number": 24,
      "text": "وَمَا هُوَ عَلَى اَ۬لْغَيْبِ بِضَنِينٖۖ"
    },
    {
      "ayah_number": 25,
      "text": "وَمَا هُوَ بِقَوْلِ شَيْطَٰنٖ رَّجِيمٖ"
    },
    {
      "ayah_number": 26,
      "text": "فَأَيْنَ تَذْهَبُونَۖ"
    },
    {
      "ayah_number": 27,
      "text": "إِنْ هُوَ إِلَّا ذِكْرٞ لِّلْعَٰلَمِينَ"
    },
    {
      "ayah_number": 28,
      "text": "لِمَن شَآءَ مِنكُمُۥٓ أَنْ يَّسْتَقِيمَۖ"
    },
    {
      "ayah_number": 29,
      "text": "وَمَا تَشَآءُونَ إِلَّآ أَنْ يَّشَآءَ اَ۬للَّهُ رَبُّ اُ۬لْعَٰلَمِينَۖ"
    }
  ]
}