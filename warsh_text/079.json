{
  "surah_number": 79,
  "name": "اُ۬لنَّٰزِعَٰتِ",
  "number_of_ayahs": 45,
  "ayahs": [
    {
      "ayah_number": 1,
      "text": "وَالنَّٰزِعَٰتِ غَرْقاٗ"
    },
    {
      "ayah_number": 2,
      "text": "وَالنَّٰشِطَٰتِ نَشْطاٗ"
    },
    {
      "ayah_number": 3,
      "text": "وَالسَّٰبِحَٰتِ سَبْحاٗ"
    },
    {
      "ayah_number": 4,
      "text": "فَالسَّٰبِقَٰتِ سَبْقاٗ"
    },
    {
      "ayah_number": 5,
      "text": "فَالْمُدَبِّرَٰتِ أَمْراٗ"
    },
    {
      "ayah_number": 6,
      "text": "يَوْمَ تَرْجُفُ اُ۬لرَّاجِفَةُ"
    },
    {
      "ayah_number": 7,
      "text": "تَتْبَعُهَا اَ۬لرَّادِفَةُۖ"
    },
    {
      "ayah_number": 8,
      "text": "قُلُوبٞ يَوْمَئِذٖ وَاجِفَةٌ"
    },
    {
      "ayah_number": 9,
      "text": "اَبْصَٰرُهَا خَٰشِعَةٞۖ"
    },
    {
      "ayah_number": 10,
      "text": "يَقُولُونَ أَ۟نَّا لَمَرْدُودُونَ فِے اِ۬لْحَافِرَةِ"
    },
    {
      "ayah_number": 11,
      "text": "إِذَا كُنَّا عِظَٰماٗ نَّخِرَةٗۖ"
    },
    {
      "ayah_number": 12,
      "text": "قَالُواْ تِلْكَ إِذاٗ كَرَّةٌ خَاسِرَةٞ"
    },
    {
      "ayah_number": 13,
      "text": "فَإِنَّمَا هِيَ زَجْرَةٞ وَٰحِدَةٞ"
    },
    {
      "ayah_number": 14,
      "text": "فَإِذَا هُم بِالسَّاهِرَةِۖ"
    },
    {
      "ayah_number": 15,
      "text": "هَلَ اَت۪يٰكَ حَدِيثُ مُوس۪ىٰٓ"
    },
    {
      "ayah_number": 16,
      "text": "إِذْ نَاد۪يٰهُ رَبُّهُۥ بِالْوَادِ اِ۬لْمُقَدَّسِ طُوَىۖ"
    },
    {
      "ayah_number": 17,
      "text": "اَ۪ذْهَبِ اِلَىٰ فِرْعَوْنَ إِنَّهُۥ طَغ۪ىٰ"
    },
    {
      "ayah_number": 18,
      "text": "فَقُلْ هَل لَّكَ إِلَىٰٓ أَن تَزَّكّ۪ىٰ"
    },
    {
      "ayah_number": 19,
      "text": "وَأَهْدِيَكَ إِلَىٰ رَبِّكَ فَتَخْش۪ىٰۖ"
    },
    {
      "ayah_number": 20,
      "text": "فَأَر۪يٰهُ اُ۬لَايَةَ اَ۬لْكُبْر۪ىٰ"
    },
    {
      "ayah_number": 21,
      "text": "فَكَذَّبَ وَعَص۪ىٰ"
    },
    {
      "ayah_number": 22,
      "text": "ثُمَّ أَدْبَرَ يَسْع۪ىٰ"
    },
    {
      "ayah_number": 23,
      "text": "فَحَشَرَ فَنَاد۪ىٰ"
    },
    {
      "ayah_number": 24,
      "text": "فَقَالَ أَنَا رَبُّكُمُ اُ۬لَاعْل۪ىٰ"
    },
    {
      "ayah_number": 25,
      "text": "فَأَخَذَهُ اُ۬للَّهُ نَكَالَ اَ۬لَاخِرَةِ وَالُاول۪ىٰٓۖ"
    },
    {
      "ayah_number": 26,
      "text": "إِنَّ فِے ذَٰلِكَ لَعِبْرَةٗ لِّمَنْ يَّخْش۪ىٰٓۖ"
    },
    {
      "ayah_number": 27,
      "text": "ءَآنتُمُۥٓ أَشَدُّ خَلْقاً اَمِ اِ۬لسَّمَآءُۖ بَنَيٰهَا"
    },
    {
      "ayah_number": 28,
      "text": "رَفَعَ سَمْكَهَا فَسَوَّيٰهَا"
    },
    {
      "ayah_number": 29,
      "text": "وَأَغْطَشَ لَيْلَهَا وَأَخْرَجَ ضُحَيٰهَاۖ"
    },
    {
      "ayah_number": 30,
      "text": "وَالَارْضَ بَعْدَ ذَٰلِكَ دَحَيٰهَآ"
    },
    {
      "ayah_number": 31,
      "text": "أَخْرَجَ مِنْهَا مَآءَهَا وَمَرْعَيٰهَا"
    },
    {
      "ayah_number": 32,
      "text": "وَالْجِبَالَ أَرْسَيٰهَا"
    },
    {
      "ayah_number": 33,
      "text": "مَتَٰعاٗ لَّكُمْ وَلِأَنْعَٰمِكُمْۖ"
    },
    {
      "ayah_number": 34,
      "text": "فَإِذَا جَآءَتِ اِ۬لطَّآمَّةُ اُ۬لْكُبْر۪ىٰ"
    },
    {
      "ayah_number": 35,
      "text": "يَوْمَ يَتَذَكَّرُ اُ۬لِانسَٰنُ مَا سَع۪ىٰ"
    },
    {
      "ayah_number": 36,
      "text": "وَبُرِّزَتِ اِ۬لْجَحِيمُ لِمَنْ يَّر۪ىٰۖ"
    },
    {
      "ayah_number": 37,
      "text": "فَأَمَّا مَن طَغ۪ىٰ وَءَاثَرَ اَ۬لْحَيَوٰةَ اَ۬لدُّنْي۪ا"
    },
    {
      "ayah_number": 38,
      "text": "فَإِنَّ اَ۬لْجَحِيمَ هِيَ اَ۬لْمَأْو۪ىٰۖ"
    },
    {
      "ayah_number": 39,
      "text": "وَأَمَّا مَنْ خَافَ مَقَامَ رَبِّهِۦ وَنَهَى اَ۬لنَّفْسَ عَنِ اِ۬لْهَو۪ىٰ"
    },
    {
      "ayah_number": 40,
      "text": "فَإِنَّ اَ۬لْجَنَّةَ هِيَ اَ۬لْمَأْو۪ىٰۖ"
    },
    {
      "ayah_number": 41,
      "text": "يَسْـَٔلُونَكَ عَنِ اِ۬لسَّاعَةِ أَيَّانَ مُرْسَيٰهَاۖ"
    },
    {
      "ayah_number": 42,
      "text": "فِيمَ أَنتَ مِن ذِكْر۪يٰهَآۖ"
    },
    {
      "ayah_number": 43,
      "text": "إِلَىٰ رَبِّكَ مُنتَهَيٰهَآۖ"
    },
    {
      "ayah_number": 44,
      "text": "إِنَّمَآ أَنتَ مُنذِرُ مَنْ يَّخْشَيٰهَاۖ"
    },
    {
      "ayah_number": 45,
      "text": "كَأَنَّهُمْ يَوْمَ يَرَوْنَهَا لَمْ يَلْبَثُوٓاْ إِلَّا عَشِيَّةً اَوْ ضُحَيٰهَاۖ"
    }
  ]
}