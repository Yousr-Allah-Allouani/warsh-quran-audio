{
  "surah_number": 80,
  "name": "عَبَسَ",
  "number_of_ayahs": 42,
  "ayahs": [
    {
      "ayah_number": 1,
      "text": "عَبَسَ وَتَوَلّ۪ىٰٓ"
    },
    {
      "ayah_number": 2,
      "text": "أَن جَآءَهُ اُ۬لَاعْم۪ىٰۖ"
    },
    {
      "ayah_number": 3,
      "text": "وَمَا يُدْرِيكَۖ لَعَلَّهُۥ يَزَّكّ۪ىٰٓ"
    },
    {
      "ayah_number": 4,
      "text": "أَوْ يَذَّكَّرُ فَتَنفَعُهُ اُ۬لذِّكْر۪ىٰٓۖ"
    },
    {
      "ayah_number": 5,
      "text": "أَمَّا مَنِ اِ۪سْتَغْن۪ىٰ"
    },
    {
      "ayah_number": 6,
      "text": "فَأَنتَ لَهُۥ تَصَّدّ۪ىٰ"
    },
    {
      "ayah_number": 7,
      "text": "وَمَا عَلَيْكَ أَلَّا يَزَّكّ۪ىٰۖ"
    },
    {
      "ayah_number": 8,
      "text": "وَأَمَّا مَن جَآءَكَ يَسْع۪ىٰ"
    },
    {
      "ayah_number": 9,
      "text": "وَهُوَ يَخْش۪ىٰ"
    },
    {
      "ayah_number": 10,
      "text": "فَأَنتَ عَنْهُ تَلَهّ۪ىٰ"
    },
    {
      "ayah_number": 11,
      "text": "كَلَّآۖ إِنَّهَا تَذْكِرَةٞۖ"
    },
    {
      "ayah_number": 12,
      "text": "فَمَن شَآءَ ذَكَرَهُۥ"
    },
    {
      "ayah_number": 13,
      "text": "فِے صُحُفٖ مُّكَرَّمَةٖ"
    },
    {
      "ayah_number": 14,
      "text": "مَّرْفُوعَةٖ مُّطَهَّرَةِۢ"
    },
    {
      "ayah_number": 15,
      "text": "بِأَيْدِے سَفَرَةٖ"
    },
    {
      "ayah_number": 16,
      "text": "كِرَامِۢ بَرَرَةٖۖ"
    },
    {
      "ayah_number": 17,
      "text": "قُتِلَ اَ۬لِانسَٰنُ مَآ أَكْفَرَهُۥۖ"
    },
    {
      "ayah_number": 18,
      "text": "مِنَ اَيِّ شَےْءٍ خَلَقَهُۥۖ"
    },
    {
      "ayah_number": 19,
      "text": "مِن نُّطْفَةٍ خَلَقَهُۥ فَقَدَّرَهُۥ"
    },
    {
      "ayah_number": 20,
      "text": "ثُمَّ اَ۬لسَّبِيلَ يَسَّرَهُۥ"
    },
    {
      "ayah_number": 21,
      "text": "ثُمَّ أَمَاتَهُۥ فَأَقْبَرَهُۥۖ"
    },
    {
      "ayah_number": 22,
      "text": "ثُمَّ إِذَا شَآءَ انشَرَهُۥۖ"
    },
    {
      "ayah_number": 23,
      "text": "كَلَّا لَمَّا يَقْضِ مَآ أَمَرَهُۥۖ"
    },
    {
      "ayah_number": 24,
      "text": "فَلْيَنظُرِ اِ۬لِانسَٰنُ إِلَىٰ طَعَامِهِۦٓۖ"
    },
    {
      "ayah_number": 25,
      "text": "إِنَّا صَبَبْنَا اَ۬لْمَآءَ صَبّاٗ"
    },
    {
      "ayah_number": 26,
      "text": "ثُمَّ شَقَقْنَا اَ۬لَارْضَ شَقّاٗ"
    },
    {
      "ayah_number": 27,
      "text": "فَأَنۢبَتْنَا فِيهَا حَبّاٗ"
    },
    {
      "ayah_number": 28,
      "text": "وَعِنَباٗ وَقَضْباٗ"
    },
    {
      "ayah_number": 29,
      "text": "وَزَيْتُوناٗ وَنَخْلاٗ"
    },
    {
      "ayah_number": 30,
      "text": "وَحَدَآئِقَ غُلْباٗ"
    },
    {
      "ayah_number": 31,
      "text": "وَفَٰكِهَةٗ وَأَبّاٗ"
    },
    {
      "ayah_number": 32,
      "text": "مَّتَٰعاٗ لَّكُمْ وَلِأَنْعَٰمِكُمْۖ"
    },
    {
      "ayah_number": 33,
      "text": "فَإِذَا جَآءَتِ اِ۬لصَّآخَّةُ"
    },
    {
      "ayah_number": 34,
      "text": "يَوْمَ يَفِرُّ اُ۬لْمَرْءُ مِنَ اَخِيهِ"
    },
    {
      "ayah_number": 35,
      "text": "وَأُمِّهِۦ وَأَبِيهِ"
    },
    {
      "ayah_number": 36,
      "text": "وَصَٰحِبَتِهِۦ وَبَنِيهِۖ"
    },
    {
      "ayah_number": 37,
      "text": "لِكُلِّ اِ۪مْرِےٕٖ مِّنْهُمْ يَوْمَئِذٖ شَأْنٞ يُغْنِيهِۖ"
    },
    {
      "ayah_number": 38,
      "text": "وُجُوهٞ يَوْمَئِذٖ مُّسْفِرَةٞ"
    },
    {
      "ayah_number": 39,
      "text": "ضَاحِكَةٞ مُّسْتَبْشِرَةٞۖ"
    },
    {
      "ayah_number": 40,
      "text": "وَوُجُوهٞ يَوْمَئِذٍ عَلَيْهَا غَبَرَةٞ"
    },
    {
      "ayah_number": 41,
      "text": "تَرْهَقُهَا قَتَرَةٌۖ"
    },
    {
      "ayah_number": 42,
      "text": "ا۟وْلَٰٓئِكَ هُمُ اُ۬لْكَفَرَةُ اُ۬لْفَجَرَةُۖ"
    }
  ]
}