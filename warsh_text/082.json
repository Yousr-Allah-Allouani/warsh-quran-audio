{
  "surah_number": 82,
  "name": "اُ۬لِانفِطَارِ",
  "number_of_ayahs": 19,
  "ayahs": [
    {
      "ayah_number": 1,
      "text": "إِذَا اَ۬لسَّمَآءُ اُ۪نفَطَرَتْ"
    },
    {
      "ayah_number": 2,
      "text": "وَإِذَا اَ۬لْكَوَاكِبُ اُ۪نتَثَرَتْ"
    },
    {
      "ayah_number": 3,
      "text": "وَإِذَا اَ۬لْبِحَارُ فُجِّرَتْ"
    },
    {
      "ayah_number": 4,
      "text": "وَإِذَا اَ۬لْقُبُورُ بُعْثِرَتْ"
    },
    {
      "ayah_number": 5,
      "text": "عَلِمَتْ نَفْسٞ مَّا قَدَّمَتْ وَأَخَّرَتْۖ"
    },
    {
      "ayah_number": 6,
      "text": "يَٰٓأَيُّهَا اَ۬لِانسَٰنُ مَا غَرَّكَ بِرَبِّكَ اَ۬لْكَرِيمِ"
    },
    {
      "ayah_number": 7,
      "text": "اِ۬لذِے خَلَقَكَ فَسَوّ۪يٰكَ فَعَدَّلَكَ"
    },
    {
      "ayah_number": 8,
      "text": "فِےٓ أَيِّ صُورَةٖ مَّا شَآءَ رَكَّبَكَۖ"
    },
    {
      "ayah_number": 9,
      "text": "كَلَّا بَلْ تُكَذِّبُونَ بِالدِّينِ"
    },
    {
      "ayah_number": 10,
      "text": "وَإِنَّ عَلَيْكُمْ لَحَٰفِظِينَ"
    },
    {
      "ayah_number": 11,
      "text": "كِرَاماٗ كَٰتِبِينَ"
    },
    {
      "ayah_number": 12,
      "text": "يَعْلَمُونَ مَا تَفْعَلُونَۖ"
    },
    {
      "ayah_number": 13,
      "text": "إِنَّ اَ۬لَابْرَارَ لَفِے نَعِيمٖۖ"
    },
    {
      "ayah_number": 14,
      "text": "وَإِنَّ اَ۬لْفُجَّارَ لَفِے جَحِيمٖ"
    },
    {
      "ayah_number": 15,
      "text": "يَصْلَوْنَهَا يَوْمَ اَ۬لدِّينِ"
    },
    {
      "ayah_number": 16,
      "text": "وَمَا هُمْ عَنْهَا بِغَآئِبِينَۖ"
    },
    {
      "ayah_number": 17,
      "text": "وَمَآ أَدْر۪يٰكَ مَا يَوْمُ اُ۬لدِّينِ"
    },
    {
      "ayah_number": 18,
      "text": "ثُمَّ مَآ أَدْر۪يٰكَ مَا يَوْمُ اُ۬لدِّينِۖ"
    },
    {
      "ayah_number": 19,
      "text": "يَوْمَ لَا تَمْلِكُ نَفْسٞ لِّنَفْسٖ شَئْاٗۖ وَالَامْرُ يَوْمَئِذٖ لِّلهِۖ"
    }
  ]
}