{
  "surah_number": 91,
  "name": "اُ۬لشَّمْسِ",
  "number_of_ayahs": 15,
  "ayahs": [
    {
      "ayah_number": 1,
      "text": "وَالشَّمْسِ وَضُحَيٰهَا"
    },
    {
      "ayah_number": 2,
      "text": "وَالْقَمَرِ إِذَا تَلَيٰهَا"
    },
    {
      "ayah_number": 3,
      "text": "وَالنَّه۪ارِ إِذَا جَلَّيٰهَا"
    },
    {
      "ayah_number": 4,
      "text": "وَاليْلِ إِذَا يَغْشَيٰهَا"
    },
    {
      "ayah_number": 5,
      "text": "وَالسَّمَآءِ وَمَا بَنَيٰهَا"
    },
    {
      "ayah_number": 6,
      "text": "وَالَارْضِ وَمَا طَحَيٰهَا"
    },
    {
      "ayah_number": 7,
      "text": "وَنَفْسٖ وَمَا سَوَّيٰهَا"
    },
    {
      "ayah_number": 8,
      "text": "فَأَلْهَمَهَا فُجُورَهَا وَتَقْوَيٰهَا"
    },
    {
      "ayah_number": 9,
      "text": "قَدَ اَفْلَحَ مَن زَكَّيٰهَا"
    },
    {
      "ayah_number": 10,
      "text": "وَقَدْ خَابَ مَن دَسَّيٰهَاۖ"
    },
    {
      "ayah_number": 11,
      "text": "كَذَّبَتْ ثَمُودُ بِطَغْوَيٰهَآ"
    },
    {
      "ayah_number": 12,
      "text": "إِذِ اِ۪نۢبَعَثَ أَشْقَيٰهَا"
    },
    {
      "ayah_number": 13,
      "text": "فَقَالَ لَهُمْ رَسُولُ اُ۬للَّهِ نَاقَةَ اَ۬للَّهِ وَسُقْيَاهَا"
    },
    {
      "ayah_number": 14,
      "text": "فَكَذَّبُوهُ فَعَقَرُوهَا فَدَمْدَمَ عَلَيْهِمْ رَبُّهُم بِذَنۢبِهِمْ فَسَوَّيٰهَاۖ"
    },
    {
      "ayah_number": 15,
      "text": "فَلَا يَخَافُ عُقْبَٰهَاۖ"
    }
  ]
}