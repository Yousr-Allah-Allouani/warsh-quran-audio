{
  "surah_number": 53,
  "name": "اُ۬لنَّجْمِ",
  "number_of_ayahs": 61,
  "ayahs": [
    {
      "ayah_number": 1,
      "text": "وَالنَّجْمِ إِذَا هَو۪ىٰ"
    },
    {
      "ayah_number": 2,
      "text": "مَا ضَلَّ صَٰحِبُكُمْ وَمَا غَو۪ىٰ"
    },
    {
      "ayah_number": 3,
      "text": "وَمَا يَنطِقُ عَنِ اِ۬لْهَو۪ىٰٓ"
    },
    {
      "ayah_number": 4,
      "text": "إِنْ هُوَ إِلَّا وَحْيٞ يُوح۪ىٰۖ"
    },
    {
      "ayah_number": 5,
      "text": "عَلَّمَهُۥ شَدِيدُ اُ۬لْقُو۪ىٰ"
    },
    {
      "ayah_number": 6,
      "text": "ذُو مِرَّةٖۖ فَاسْتَو۪ىٰ"
    },
    {
      "ayah_number": 7,
      "text": "وَهُوَ بِالُافُقِ اِ۬لَاعْل۪ىٰۖ"
    },
    {
      "ayah_number": 8,
      "text": "ثُمَّ دَنَا فَتَدَلّ۪ىٰ"
    },
    {
      "ayah_number": 9,
      "text": "فَكَانَ قَابَ قَوْسَيْنِ أَوَ اَدْن۪ىٰۖ"
    },
    {
      "ayah_number": 10,
      "text": "فَأَوْح۪ىٰٓ إِلَىٰ عَبْدِهِۦ مَآ أَوْح۪ىٰۖ"
    },
    {
      "ayah_number": 11,
      "text": "مَا كَذَبَ اَ۬لْفُؤَادُ مَا ر۪أ۪ىٰٓۖ"
    },
    {
      "ayah_number": 12,
      "text": "أَفَتُمَٰرُونَهُۥ عَلَىٰ مَا يَر۪ىٰۖ"
    },
    {
      "ayah_number": 13,
      "text": "وَلَقَدْ ر۪ء۪اهُ نَزْلَةً ا۟خْر۪ىٰ"
    },
    {
      "ayah_number": 14,
      "text": "عِندَ سِدْرَةِ اِ۬لْمُنتَه۪ىٰ"
    },
    {
      "ayah_number": 15,
      "text": "عِندَهَا جَنَّةُ اُ۬لْمَأْو۪ىٰٓ"
    },
    {
      "ayah_number": 16,
      "text": "إِذْ يَغْشَى اَ۬لسِّدْرَةَ مَا يَغْش۪ىٰۖ"
    },
    {
      "ayah_number": 17,
      "text": "مَا زَاغَ اَ۬لْبَصَرُ وَمَا طَغ۪ىٰۖ"
    },
    {
      "ayah_number": 18,
      "text": "لَقَدْ ر۪أ۪ىٰ مِنَ اٰيَٰتِ رَبِّهِ اِ۬لْكُبْر۪ىٰٓۖ"
    },
    {
      "ayah_number": 19,
      "text": "أَفَرَٰٓيْتُمُ اُ۬للَّٰتَ وَالْعُزّ۪ىٰ"
    },
    {
      "ayah_number": 20,
      "text": "وَمَنَوٰةَ اَ۬لثَّالِثَةَ اَ۬لُاخْر۪ىٰٓ"
    },
    {
      "ayah_number": 21,
      "text": "أَلَكُمُ اُ۬لذَّكَرُ وَلَهُ اُ۬لُانث۪ىٰۖ"
    },
    {
      "ayah_number": 22,
      "text": "تِلْكَ إِذاٗ قِسْمَةٞ ضِيز۪ىٰٓۖ"
    },
    {
      "ayah_number": 23,
      "text": "إِنْ هِيَ إِلَّآ أَسْمَآءٞ سَمَّيْتُمُوهَآ أَنتُمْ وَءَابَآؤُكُم مَّآ أَنزَلَ اَ۬للَّهُ بِهَا مِن سُلْطَٰنٍۖ اِنْ يَّتَّبِعُونَ إِلَّا اَ۬لظَّنَّ وَمَا تَهْوَى اَ۬لَانفُسُۖ وَلَقَدْ جَآءَهُم مِّن رَّبِّهِمُ اُ۬لْهُد۪ىٰٓۖ"
    },
    {
      "ayah_number": 24,
      "text": "أَمْ لِلِانسَٰنِ مَا تَمَنّ۪ىٰۖ"
    },
    {
      "ayah_number": 25,
      "text": "فَلِلهِ اِ۬لَاخِرَةُ وَالُاول۪ىٰۖ"
    },
    {
      "ayah_number": 26,
      "text": "وَكَم مِّن مَّلَكٖ فِے اِ۬لسَّمَٰوَٰتِ لَا تُغْنِے شَفَٰعَتُهُمْ شَئْاً اِلَّا مِنۢ بَعْدِ أَنْ يَّاذَنَ اَ۬للَّهُ لِمَنْ يَّشَآءُ وَيَرْض۪ىٰٓۖ"
    },
    {
      "ayah_number": 27,
      "text": "إِنَّ اَ۬لذِينَ لَا يُومِنُونَ بِالَاخِرَةِ لَيُسَمُّونَ اَ۬لْمَلَٰٓئِكَةَ تَسْمِيَةَ اَ۬لُانث۪ىٰۖ"
    },
    {
      "ayah_number": 28,
      "text": "وَمَا لَهُم بِهِۦ مِنْ عِلْمٍۖ اِنْ يَّتَّبِعُونَ إِلَّا اَ۬لظَّنَّۖ وَإِنَّ اَ۬لظَّنَّ لَا يُغْنِے مِنَ اَ۬لْحَقِّ شَئْاٗۖ فَأَعْرِضْ عَن مَّن تَوَلّ۪ىٰ عَن ذِكْرِنَا وَلَمْ يُرِدِ اِلَّا اَ۬لْحَيَوٰةَ اَ۬لدُّنْي۪اۖ"
    },
    {
      "ayah_number": 29,
      "text": "ذَٰلِكَ مَبْلَغُهُم مِّنَ اَ۬لْعِلْمِۖ إِنَّ رَبَّكَ هُوَ أَعْلَمُ بِمَن ضَلَّ عَن سَبِيلِهِۦۖ وَهُوَ أَعْلَمُ بِمَنِ اِ۪هْتَد۪ىٰۖ"
    },
    {
      "ayah_number": 30,
      "text": "وَلِلهِ مَا فِے اِ۬لسَّمَٰوَٰتِ وَمَا فِے اِ۬لَارْضِ لِيَجْزِيَ اَ۬لذِينَ أَسَٰٓـُٔواْ بِمَا عَمِلُواْ وَيَجْزِيَ اَ۬لذِينَ أَحْسَنُواْ بِالْحُسْنَىۖ"
    },
    {
      "ayah_number": 31,
      "text": "اَ۬لذِينَ يَجْتَنِبُونَ كَبَٰٓئِرَ اَ۬لِاثْمِ وَالْفَوَٰحِشَ إِلَّا اَ۬للَّمَمَۖ إِنَّ رَبَّكَ وَٰسِعُ اُ۬لْمَغْفِرَةِۖ هُوَ أَعْلَمُ بِكُمُۥٓ إِذَ اَنشَأَكُم مِّنَ اَ۬لَارْضِ وَإِذَ اَنتُمُۥٓ أَجِنَّةٞ فِے بُطُونِ أُمَّهَٰتِكُمْۖ فَلَا تُزَكُّوٓاْ أَنفُسَكُمْۖ هُوَ أَعْلَمُ بِمَنِ اِ۪تَّق۪ىٰٓۖ"
    },
    {
      "ayah_number": 32,
      "text": "أَفَرَٰٓيْتَ اَ۬لذِے تَوَلّ۪ىٰ"
    },
    {
      "ayah_number": 33,
      "text": "وَأَعْط۪ىٰ قَلِيلاٗ وَأَكْد۪ىٰٓ"
    },
    {
      "ayah_number": 34,
      "text": "أَعِندَهُۥ عِلْمُ اُ۬لْغَيْبِ فَهُوَ يَر۪ىٰٓۖ"
    },
    {
      "ayah_number": 35,
      "text": "أَمْ لَمْ يُنَبَّأْ بِمَا فِے صُحُفِ مُوس۪ىٰ"
    },
    {
      "ayah_number": 36,
      "text": "وَإِبْرَٰهِيمَ اَ۬لذِے وَفّ۪ىٰٓ"
    },
    {
      "ayah_number": 37,
      "text": "أَلَّا تَزِرُ وَازِرَةٞ وِزْرَ أُخْر۪ىٰۖ"
    },
    {
      "ayah_number": 38,
      "text": "وَأَن لَّيْسَ لِلِانسَٰنِ إِلَّا مَا سَع۪ىٰۖ"
    },
    {
      "ayah_number": 39,
      "text": "وَأَنَّ سَعْيَهُۥ سَوْفَ يُر۪ىٰۖ"
    },
    {
      "ayah_number": 40,
      "text": "ثُمَّ يُجْز۪يٰهُ اُ۬لْجَزَآءَ اَ۬لَاوْف۪ىٰۖ"
    },
    {
      "ayah_number": 41,
      "text": "وَأَنَّ إِلَىٰ رَبِّكَ اَ۬لْمُنتَه۪ىٰۖ"
    },
    {
      "ayah_number": 42,
      "text": "وَأَنَّهُۥ هُوَ أَضْحَكَ وَأَبْك۪ىٰۖ"
    },
    {
      "ayah_number": 43,
      "text": "وَأَنَّهُۥ هُوَ أَمَاتَ وَأَحْي۪اۖ"
    },
    {
      "ayah_number": 44,
      "text": "وَأَنَّهُۥ خَلَقَ اَ۬لزَّوْجَيْنِ اِ۬لذَّكَرَ وَالُانث۪ىٰ"
    },
    {
      "ayah_number": 45,
      "text": "مِن نُّطْفَةٍ اِذَا تُمْن۪ىٰۖ"
    },
    {
      "ayah_number": 46,
      "text": "وَأَنَّ عَلَيْهِ اِ۬لنَّشْأَةَ اَ۬لُاخْر۪ىٰۖ"
    },
    {
      "ayah_number": 47,
      "text": "وَأَنَّهُۥ هُوَ أَغْن۪ىٰ وَأَقْن۪ىٰۖ"
    },
    {
      "ayah_number": 48,
      "text": "وَأَنَّهُۥ هُوَ رَبُّ اُ۬لشِّعْر۪ىٰۖ"
    },
    {
      "ayah_number": 49,
      "text": "وَأَنَّهُۥٓ أَهْلَكَ عَاداٗ اَ۬لُّاول۪ىٰ"
    },
    {
      "ayah_number": 50,
      "text": "وَثَمُوداٗ فَمَآ أَبْق۪ىٰ"
    },
    {
      "ayah_number": 51,
      "text": "وَقَوْمَ نُوحٖ مِّن قَبْلُۖ إِنَّهُمْ كَانُواْ هُمُۥٓ أَظْلَمَ وَأَطْغ۪ىٰۖ"
    },
    {
      "ayah_number": 52,
      "text": "وَالْمُوتَفِكَةَ أَهْو۪ىٰۖ"
    },
    {
      "ayah_number": 53,
      "text": "فَغَشّ۪يٰهَا مَا غَشّ۪ىٰۖ"
    },
    {
      "ayah_number": 54,
      "text": "فَبِأَيِّ ءَالَآءِ رَبِّكَ تَتَمَار۪ىٰۖ"
    },
    {
      "ayah_number": 55,
      "text": "هَٰذَا نَذِيرٞ مِّنَ اَ۬لنُّذُرِ اِ۬لُاول۪ىٰٓۖ"
    },
    {
      "ayah_number": 56,
      "text": "أَزِفَتِ اِ۬لَازِفَةُۖ"
    },
    {
      "ayah_number": 57,
      "text": "لَيْسَ لَهَا مِن دُونِ اِ۬للَّهِ كَاشِفَةٌۖ"
    },
    {
      "ayah_number": 58,
      "text": "اَفَمِنْ هَٰذَا اَ۬لْحَدِيثِ تَعْجَبُونَ"
    },
    {
      "ayah_number": 59,
      "text": "وَتَضْحَكُونَ وَلَا تَبْكُونَ"
    },
    {
      "ayah_number": 60,
      "text": "وَأَنتُمْ سَٰمِدُونَۖ"
    },
    {
      "ayah_number": 61,
      "text": "فَاسْجُدُواْ لِلهِ وَاعْبُدُواْۖ۩"
    }
  ]
}