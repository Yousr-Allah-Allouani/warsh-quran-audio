{
  "surah_number": 56,
  "name": "اُ۬لْوَاقِعَةِ",
  "number_of_ayahs": 99,
  "ayahs": [
    {
      "ayah_number": 1,
      "text": "إِذَا وَقَعَتِ اِ۬لْوَاقِعَةُ"
    },
    {
      "ayah_number": 2,
      "text": "لَيْسَ لِوَقْعَتِهَا كَٰذِبَةٌۖ"
    },
    {
      "ayah_number": 3,
      "text": "خَافِضَةٞ رَّافِعَةٌ"
    },
    {
      "ayah_number": 4,
      "text": "اِذَا رُجَّتِ اِ۬لَارْضُ رَجّاٗ"
    },
    {
      "ayah_number": 5,
      "text": "وَبُسَّتِ اِ۬لْجِبَالُ بَسّاٗ"
    },
    {
      "ayah_number": 6,
      "text": "فَكَانَتْ هَبَآءٗ مُّنۢبَثّاٗ"
    },
    {
      "ayah_number": 7,
      "text": "وَكُنتُمُۥٓ أَزْوَٰجاٗ ثَلَٰثَةٗۖ"
    },
    {
      "ayah_number": 8,
      "text": "فَأَصْحَٰبُ اُ۬لْمَيْمَنَةِ"
    },
    {
      "ayah_number": 9,
      "text": "مَآ أَصْحَٰبُ اُ۬لْمَيْمَنَةِۖ"
    },
    {
      "ayah_number": 10,
      "text": "وَأَصْحَٰبُ اُ۬لْمَشْـَٔمَةِ"
    },
    {
      "ayah_number": 11,
      "text": "مَآ أَصْحَٰبُ اُ۬لْمَشْـَٔمَةِۖ"
    },
    {
      "ayah_number": 12,
      "text": "وَالسَّٰبِقُونَ اَ۬لسَّٰبِقُونَۖ"
    },
    {
      "ayah_number": 13,
      "text": "أُوْلَٰٓئِكَ اَ۬لْمُقَرَّبُونَ"
    },
    {
      "ayah_number": 14,
      "text": "فِے جَنَّٰتِ اِ۬لنَّعِيمِۖ"
    },
    {
      "ayah_number": 15,
      "text": "ثُلَّةٞ مِّنَ اَ۬لَاوَّلِينَ"
    },
    {
      "ayah_number": 16,
      "text": "وَقَلِيلٞ مِّنَ اَ۬لَاخِرِينَ"
    },
    {
      "ayah_number": 17,
      "text": "عَلَىٰ سُرُرٖ مَّوْضُونَةٖ"
    },
    {
      "ayah_number": 18,
      "text": "مُّتَّكِـِٕينَ عَلَيْهَا مُتَقَٰبِلِينَۖ"
    },
    {
      "ayah_number": 19,
      "text": "يَطُوفُ عَلَيْهِمْ وِلْدَٰنٞ مُّخَلَّدُونَ"
    },
    {
      "ayah_number": 20,
      "text": "بِأَكْوَابٖ وَأَبَارِيقَ"
    },
    {
      "ayah_number": 21,
      "text": "وَكَأْسٖ مِّن مَّعِينٖ"
    },
    {
      "ayah_number": 22,
      "text": "لَّا يُصَدَّعُونَ عَنْهَا وَلَا يُنزَفُونَ"
    },
    {
      "ayah_number": 23,
      "text": "وَفَٰكِهَةٖ مِّمَّا يَتَخَيَّرُونَ"
    },
    {
      "ayah_number": 24,
      "text": "وَلَحْمِ طَيْرٖ مِّمَّا يَشْتَهُونَۖ"
    },
    {
      "ayah_number": 25,
      "text": "وَحُورٌ عِينٞ كَأَمْثَٰلِ اِ۬للُّؤْلُوِٕ اِ۬لْمَكْنُونِ"
    },
    {
      "ayah_number": 26,
      "text": "جَزَآءَۢ بِمَا كَانُواْ يَعْمَلُونَۖ"
    },
    {
      "ayah_number": 27,
      "text": "لَا يَسْمَعُونَ فِيهَا لَغْواٗ وَلَا تَاثِيماًۖ"
    },
    {
      "ayah_number": 28,
      "text": "اِلَّا قِيلاٗ سَلَٰماٗ سَلَٰماٗۖ"
    },
    {
      "ayah_number": 29,
      "text": "وَأَصْحَٰبُ اُ۬لْيَمِينِ مَآ أَصْحَٰبُ اُ۬لْيَمِينِۖ"
    },
    {
      "ayah_number": 30,
      "text": "فِے سِدْرٖ مَّخْضُودٖ"
    },
    {
      "ayah_number": 31,
      "text": "وَطَلْحٖ مَّنضُودٖ"
    },
    {
      "ayah_number": 32,
      "text": "وَظِلّٖ مَّمْدُودٖ"
    },
    {
      "ayah_number": 33,
      "text": "وَمَآءٖ مَّسْكُوبٖ"
    },
    {
      "ayah_number": 34,
      "text": "وَفَٰكِهَةٖ كَثِيرَةٖ"
    },
    {
      "ayah_number": 35,
      "text": "لَّا مَقْطُوعَةٖ وَلَا مَمْنُوعَةٖ"
    },
    {
      "ayah_number": 36,
      "text": "وَفُرُشٖ مَّرْفُوعَةٍۖ"
    },
    {
      "ayah_number": 37,
      "text": "اِنَّآ أَنشَأْنَٰهُنَّ إِنشَآءٗ"
    },
    {
      "ayah_number": 38,
      "text": "فَجَعَلْنَٰهُنَّ أَبْكَاراً"
    },
    {
      "ayah_number": 39,
      "text": "عُرُباً اَتْرَاباٗ"
    },
    {
      "ayah_number": 40,
      "text": "لِّأَصْحَٰبِ اِ۬لْيَمِينِۖ"
    },
    {
      "ayah_number": 41,
      "text": "ثُلَّةٞ مِّنَ اَ۬لَاوَّلِينَ"
    },
    {
      "ayah_number": 42,
      "text": "وَثُلَّةٞ مِّنَ اَ۬لَاخِرِينَۖ"
    },
    {
      "ayah_number": 43,
      "text": "وَأَصْحَٰبُ اُ۬لشِّمَالِ"
    },
    {
      "ayah_number": 44,
      "text": "مَآ أَصْحَٰبُ اُ۬لشِّمَالِۖ"
    },
    {
      "ayah_number": 45,
      "text": "فِے سَمُومٖ وَحَمِيمٖ"
    },
    {
      "ayah_number": 46,
      "text": "وَظِلّٖ مِّنْ يَّحْمُومٖ"
    },
    {
      "ayah_number": 47,
      "text": "لَّا بَارِدٖ وَلَا كَرِيمٍۖ"
    },
    {
      "ayah_number": 48,
      "text": "اِنَّهُمْ كَانُواْ قَبْلَ ذَٰلِكَ مُتْرَفِينَۖ"
    },
    {
      "ayah_number": 49,
      "text": "وَكَانُواْ يُصِرُّونَ عَلَى اَ۬لْحِنثِ اِ۬لْعَظِيمِۖ"
    },
    {
      "ayah_number": 50,
      "text": "وَكَانُواْ يَقُولُونَ أَئِذَا مِتْنَا وَكُنَّا تُرَاباٗ وَعِظَٰماً اِنَّا لَمَبْعُوثُونَ"
    },
    {
      "ayah_number": 51,
      "text": "أَوَءَابَآؤُنَا اَ۬لَاوَّلُونَۖ"
    },
    {
      "ayah_number": 52,
      "text": "قُلِ اِنَّ اَ۬لَاوَّلِينَ وَالَاخِرِينَ لَمَجْمُوعُونَ"
    },
    {
      "ayah_number": 53,
      "text": "إِلَىٰ مِيقَٰتِ يَوْمٖ مَّعْلُومٖۖ"
    },
    {
      "ayah_number": 54,
      "text": "ثُمَّ إِنَّكُمُۥٓ أَيُّهَا اَ۬لضَّآلُّونَ اَ۬لْمُكَذِّبُونَ"
    },
    {
      "ayah_number": 55,
      "text": "لَأٓكِلُونَ مِن شَجَرٖ مِّن زَقُّومٖ"
    },
    {
      "ayah_number": 56,
      "text": "فَمَالِـُٔونَ مِنْهَا اَ۬لْبُطُونَ"
    },
    {
      "ayah_number": 57,
      "text": "فَشَٰرِبُونَ عَلَيْهِ مِنَ اَ۬لْحَمِيمِ"
    },
    {
      "ayah_number": 58,
      "text": "فَشَٰرِبُونَ شُرْبَ اَ۬لْهِيمِۖ"
    },
    {
      "ayah_number": 59,
      "text": "هَٰذَا نُزُلُهُمْ يَوْمَ اَ۬لدِّينِۖ"
    },
    {
      "ayah_number": 60,
      "text": "نَحْنُ خَلَقْنَٰكُمْۖ فَلَوْلَا تُصَدِّقُونَۖ"
    },
    {
      "ayah_number": 61,
      "text": "أَفَرَٰٓيْتُم مَّا تُمْنُونَ"
    },
    {
      "ayah_number": 62,
      "text": "ءَآنتُمْ تَخْلُقُونَهُۥٓ أَمْ نَحْنُ اُ۬لْخَٰلِقُونَۖ"
    },
    {
      "ayah_number": 63,
      "text": "نَحْنُ قَدَّرْنَا بَيْنَكُمُ اُ۬لْمَوْتَ وَمَا نَحْنُ بِمَسْبُوقِينَ"
    },
    {
      "ayah_number": 64,
      "text": "عَلَىٰٓ أَن نُّبَدِّلَ أَمْثَٰلَكُمْ وَنُنشِئَكُمْ فِے مَا لَا تَعْلَمُونَۖ"
    },
    {
      "ayah_number": 65,
      "text": "وَلَقَدْ عَلِمْتُمُ اُ۬لنَّشْأَةَ اَ۬لُاول۪ىٰۖ فَلَوْلَا تَذَّكَّرُونَۖ"
    },
    {
      "ayah_number": 66,
      "text": "أَفَرَٰٓيْتُم مَّا تَحْرُثُونَ"
    },
    {
      "ayah_number": 67,
      "text": "ءَآنتُمْ تَزْرَعُونَهُۥٓ أَمْ نَحْنُ اُ۬لزَّٰرِعُونَۖ"
    },
    {
      "ayah_number": 68,
      "text": "لَوْ نَشَآءُ لَجَعَلْنَٰهُ حُطَٰماٗ فَظَلْتُمْ تَفَكَّهُونَ"
    },
    {
      "ayah_number": 69,
      "text": "إِنَّا لَمُغْرَمُونَ"
    },
    {
      "ayah_number": 70,
      "text": "بَلْ نَحْنُ مَحْرُومُونَۖ"
    },
    {
      "ayah_number": 71,
      "text": "أَفَرَٰٓيْتُمُ اُ۬لْمَآءَ اَ۬لذِے تَشْرَبُونَ"
    },
    {
      "ayah_number": 72,
      "text": "ءَآنتُمُۥٓ أَنزَلْتُمُوهُ مِنَ اَ۬لْمُزْنِ أَمْ نَحْنُ اُ۬لْمُنزِلُونَۖ"
    },
    {
      "ayah_number": 73,
      "text": "لَوْ نَشَآءُ جَعَلْنَٰهُ أُجَاجاٗۖ فَلَوْلَا تَشْكُرُونَۖ"
    },
    {
      "ayah_number": 74,
      "text": "أَفَرَٰٓيْتُمُ اُ۬لنَّارَ اَ۬لتِے تُورُونَ"
    },
    {
      "ayah_number": 75,
      "text": "ءَآنتُمُۥٓ أَنشَأْتُمْ شَجَرَتَهَآ أَمْ نَحْنُ اُ۬لْمُنشِـُٔونَۖ"
    },
    {
      "ayah_number": 76,
      "text": "نَحْنُ جَعَلْنَٰهَا تَذْكِرَةٗ وَمَتَٰعاٗ لِّلْمُقْوِينَۖ"
    },
    {
      "ayah_number": 77,
      "text": "فَسَبِّحْ بِاسْمِ رَبِّكَ اَ۬لْعَظِيمِۖ"
    },
    {
      "ayah_number": 78,
      "text": "فَلَآ أُقْسِمُ بِمَوَٰقِعِ اِ۬لنُّجُومِ"
    },
    {
      "ayah_number": 79,
      "text": "وَإِنَّهُۥ لَقَسَمٞ لَّوْ تَعْلَمُونَ عَظِيمٌ"
    },
    {
      "ayah_number": 80,
      "text": "اِنَّهُۥ لَقُرْءَانٞ كَرِيمٞ"
    },
    {
      "ayah_number": 81,
      "text": "فِے كِتَٰبٖ مَّكْنُونٖ"
    },
    {
      "ayah_number": 82,
      "text": "لَّا يَمَسُّهُۥٓ إِلَّا اَ۬لْمُطَهَّرُونَۖ"
    },
    {
      "ayah_number": 83,
      "text": "تَنزِيلٞ مِّن رَّبِّ اِ۬لْعَٰلَمِينَۖ"
    },
    {
      "ayah_number": 84,
      "text": "أَفَبِهَٰذَا اَ۬لْحَدِيثِ أَنتُم مُّدْهِنُونَ"
    },
    {
      "ayah_number": 85,
      "text": "وَتَجْعَلُونَ رِزْقَكُمُۥٓ أَنَّكُمْ تُكَذِّبُونَۖ"
    },
    {
      "ayah_number": 86,
      "text": "فَلَوْلَآ إِذَا بَلَغَتِ اِ۬لْحُلْقُومَ"
    },
    {
      "ayah_number": 87,
      "text": "وَأَنتُمْ حِينَئِذٖ تَنظُرُونَ"
    },
    {
      "ayah_number": 88,
      "text": "وَنَحْنُ أَقْرَبُ إِلَيْهِ مِنكُمْ وَلَٰكِن لَّا تُبْصِرُونَ"
    },
    {
      "ayah_number": 89,
      "text": "فَلَوْلَآ إِن كُنتُمْ غَيْرَ مَدِينِينَ"
    },
    {
      "ayah_number": 90,
      "text": "تَرْجِعُونَهَآ إِن كُنتُمْ صَٰدِقِينَۖ"
    },
    {
      "ayah_number": 91,
      "text": "فَأَمَّآ إِن كَانَ مِنَ اَ۬لْمُقَرَّبِينَ"
    },
    {
      "ayah_number": 92,
      "text": "فَرَوْحٞ وَرَيْحَانٞ وَجَنَّتُ نَعِيمٖۖ"
    },
    {
      "ayah_number": 93,
      "text": "وَأَمَّآ إِن كَانَ مِنَ اَصْحَٰبِ اِ۬لْيَمِينِ"
    },
    {
      "ayah_number": 94,
      "text": "فَسَلَٰمٞ لَّكَ مِنَ اَصْحَٰبِ اِ۬لْيَمِينِۖ"
    },
    {
      "ayah_number": 95,
      "text": "وَأَمَّآ إِن كَانَ مِنَ اَ۬لْمُكَذِّبِينَ اَ۬لضَّآلِّينَ"
    },
    {
      "ayah_number": 96,
      "text": "فَنُزُلٞ مِّنْ حَمِيمٖ"
    },
    {
      "ayah_number": 97,
      "text": "وَتَصْلِيَةُ جَحِيمٍۖ"
    },
    {
      "ayah_number": 98,
      "text": "اِنَّ هَٰذَا لَهُوَ حَقُّ اُ۬لْيَقِينِۖ"
    },
    {
      "ayah_number": 99,
      "text": "فَسَبِّحْ بِاسْمِ رَبِّكَ اَ۬لْعَظِيمِۖ"
    }
  ]
}