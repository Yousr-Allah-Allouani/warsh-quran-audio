{
  "surah_number": 83,
  "name": "اُ۬لْمُطَفِّفِينَ",
  "number_of_ayahs": 36,
  "ayahs": [
    {
      "ayah_number": 1,
      "text": "وَيْلٞ لِّلْمُطَفِّفِينَ"
    },
    {
      "ayah_number": 2,
      "text": "اَ۬لذِينَ إِذَا اَ۪كْتَالُواْ عَلَى اَ۬لنَّاسِ يَسْتَوْفُونَ"
    },
    {
      "ayah_number": 3,
      "text": "وَإِذَا كَالُوهُمُۥٓ أَو وَّزَنُوهُمْ يُخْسِرُونَۖ"
    },
    {
      "ayah_number": 4,
      "text": "أَلَا يَظُنُّ أُوْلَٰٓئِكَ أَنَّهُم مَّبْعُوثُونَ"
    },
    {
      "ayah_number": 5,
      "text": "لِيَوْمٍ عَظِيمٖ"
    },
    {
      "ayah_number": 6,
      "text": "يَوْمَ يَقُومُ اُ۬لنَّاسُ لِرَبِّ اِ۬لْعَٰلَمِينَۖ"
    },
    {
      "ayah_number": 7,
      "text": "كَلَّآ إِنَّ كِتَٰبَ اَ۬لْفُجّ۪ارِ لَفِے سِجِّينٖۖ"
    },
    {
      "ayah_number": 8,
      "text": "وَمَآ أَدْر۪يٰكَ مَا سِجِّينٞ"
    },
    {
      "ayah_number": 9,
      "text": "كِتَٰبٞ مَّرْقُومٞۖ"
    },
    {
      "ayah_number": 10,
      "text": "وَيْلٞ يَوْمَئِذٖ لِّلْمُكَذِّبِينَ"
    },
    {
      "ayah_number": 11,
      "text": "اَ۬لذِينَ يُكَذِّبُونَ بِيَوْمِ اِ۬لدِّينِۖ"
    },
    {
      "ayah_number": 12,
      "text": "وَمَا يُكَذِّبُ بِهِۦٓ إِلَّا كُلُّ مُعْتَدٍ اَثِيمٍ"
    },
    {
      "ayah_number": 13,
      "text": "اِذَا تُتْل۪ىٰ عَلَيْهِ ءَايَٰتُنَا قَالَ أَسَٰطِيرُ اُ۬لَاوَّلِينَۖ"
    },
    {
      "ayah_number": 14,
      "text": "كَلَّا بَل رَّانَ عَلَىٰ قُلُوبِهِم مَّا كَانُواْ يَكْسِبُونَۖ"
    },
    {
      "ayah_number": 15,
      "text": "كَلَّآ إِنَّهُمْ عَن رَّبِّهِمْ يَوْمَئِذٖ لَّمَحْجُوبُونَۖ"
    },
    {
      "ayah_number": 16,
      "text": "ثُمَّ إِنَّهُمْ لَصَالُواْ اُ۬لْجَحِيمِۖ"
    },
    {
      "ayah_number": 17,
      "text": "ثُمَّ يُقَالُ هَٰذَا اَ۬لذِے كُنتُم بِهِۦ تُكَذِّبُونَۖ"
    },
    {
      "ayah_number": 18,
      "text": "كَلَّآ إِنَّ كِتَٰبَ اَ۬لَابْر۪ارِ لَفِے عِلِّيِّينَۖ"
    },
    {
      "ayah_number": 19,
      "text": "وَمَآ أَدْر۪يٰكَ مَا عِلِّيُّونَ"
    },
    {
      "ayah_number": 20,
      "text": "كِتَٰبٞ مَّرْقُومٞ"
    },
    {
      "ayah_number": 21,
      "text": "يَشْهَدُهُ اُ۬لْمُقَرَّبُونَۖ"
    },
    {
      "ayah_number": 22,
      "text": "إِنَّ اَ۬لَابْرَارَ لَفِے نَعِيمٍ"
    },
    {
      "ayah_number": 23,
      "text": "عَلَى اَ۬لَارَآئِكِ يَنظُرُونَ"
    },
    {
      "ayah_number": 24,
      "text": "تَعْرِفُ فِے وُجُوهِهِمْ نَضْرَةَ اَ۬لنَّعِيمِ"
    },
    {
      "ayah_number": 25,
      "text": "يُسْقَوْنَ مِن رَّحِيقٖ مَّخْتُومٍ"
    },
    {
      "ayah_number": 26,
      "text": "خِتَٰمُهُۥ مِسْكٞۖ وَفِے ذَٰلِكَ فَلْيَتَنَافَسِ اِ۬لْمُتَنَٰفِسُونَۖ"
    },
    {
      "ayah_number": 27,
      "text": "وَمِزَاجُهُۥ مِن تَسْنِيمٍ"
    },
    {
      "ayah_number": 28,
      "text": "عَيْناٗ يَشْرَبُ بِهَا اَ۬لْمُقَرَّبُونَۖ"
    },
    {
      "ayah_number": 29,
      "text": "إِنَّ اَ۬لذِينَ أَجْرَمُواْ كَانُواْ مِنَ اَ۬لذِينَ ءَامَنُواْ يَضْحَكُونَ"
    },
    {
      "ayah_number": 30,
      "text": "وَإِذَا مَرُّواْ بِهِمْ يَتَغَامَزُونَ"
    },
    {
      "ayah_number": 31,
      "text": "وَإِذَا اَ۪نقَلَبُوٓاْ إِلَىٰٓ أَهْلِهِمُ اُ۪نقَلَبُواْ فَٰكِهِينَ"
    },
    {
      "ayah_number": 32,
      "text": "وَإِذَا رَأَوْهُمْ قَالُوٓاْ إِنَّ هَٰٓؤُلَآءِ لَضَآلُّونَ"
    },
    {
      "ayah_number": 33,
      "text": "وَمَآ أُرْسِلُواْ عَلَيْهِمْ حَٰفِظِينَۖ"
    },
    {
      "ayah_number": 34,
      "text": "فَالْيَوْمَ اَ۬لذِينَ ءَامَنُواْ مِنَ اَ۬لْكُفّ۪ارِ يَضْحَكُونَ"
    },
    {
      "ayah_number": 35,
      "text": "عَلَى اَ۬لَارَآئِكِۖ يَنظُرُونَ"
    },
    {
      "ayah_number": 36,
      "text": "هَلْ ثُوِّبَ اَ۬لْكُفَّارُ مَا كَانُواْ يَفْعَلُونَۖ"
    }
  ]
}