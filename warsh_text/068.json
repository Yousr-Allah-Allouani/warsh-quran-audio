{
  "surah_number": 68,
  "name": "اُ۬لْقَلَمِ",
  "number_of_ayahs": 52,
  "ayahs": [
    {
      "ayah_number": 1,
      "text": "نُّٓۖ وَالْقَلَمِ وَمَا يَسْطُرُونَ"
    },
    {
      "ayah_number": 2,
      "text": "مَآ أَنتَ بِنِعْمَةِ رَبِّكَ بِمَجْنُونٖ"
    },
    {
      "ayah_number": 3,
      "text": "وَإِنَّ لَكَ لَأَجْراً غَيْرَ مَمْنُونٖ"
    },
    {
      "ayah_number": 4,
      "text": "وَإِنَّكَ لَعَلَىٰ خُلُقٍ عَظِيمٖۖ"
    },
    {
      "ayah_number": 5,
      "text": "فَسَتُبْصِرُ وَيُبْصِرُونَ"
    },
    {
      "ayah_number": 6,
      "text": "بِأَييِّكُمُ اُ۬لْمَفْتُونُۖ"
    },
    {
      "ayah_number": 7,
      "text": "إِنَّ رَبَّكَ هُوَ أَعْلَمُ بِمَن ضَلَّ عَن سَبِيلِهِۦۖ وَهُوَ أَعْلَمُ بِالْمُهْتَدِينَۖ"
    },
    {
      "ayah_number": 8,
      "text": "فَلَا تُطِعِ اِ۬لْمُكَذِّبِينَۖ"
    },
    {
      "ayah_number": 9,
      "text": "وَدُّواْ لَوْ تُدْهِنُ فَيُدْهِنُونَۖ"
    },
    {
      "ayah_number": 10,
      "text": "وَلَا تُطِعْ كُلَّ حَلَّٰفٖ مَّهِينٍ"
    },
    {
      "ayah_number": 11,
      "text": "هَمَّازٖ مَّشَّآءِۢ بِنَمِيمٖ"
    },
    {
      "ayah_number": 12,
      "text": "مَّنَّاعٖ لِّلْخَيْرِ مُعْتَدٍ اَثِيمٍ"
    },
    {
      "ayah_number": 13,
      "text": "عُتُلِّۢ بَعْدَ ذَٰلِكَ زَنِيمٍ"
    },
    {
      "ayah_number": 14,
      "text": "اَن كَانَ ذَا مَالٖ وَبَنِينَ"
    },
    {
      "ayah_number": 15,
      "text": "إِذَا تُتْل۪ىٰ عَلَيْهِ ءَايَٰتُنَا قَالَ أَسَٰطِيرُ اُ۬لَاوَّلِينَۖ"
    },
    {
      "ayah_number": 16,
      "text": "سَنَسِمُهُۥ عَلَى اَ۬لْخُرْطُومِۖ"
    },
    {
      "ayah_number": 17,
      "text": "إِنَّا بَلَوْنَٰهُمْ كَمَا بَلَوْنَآ أَصْحَٰبَ اَ۬لْجَنَّةِ إِذَ اَقْسَمُواْ لَيَصْرِمُنَّهَا مُصْبِحِينَ"
    },
    {
      "ayah_number": 18,
      "text": "وَلَا يَسْتَثْنُونَۖ"
    },
    {
      "ayah_number": 19,
      "text": "فَطَافَ عَلَيْهَا طَآئِفٞ مِّن رَّبِّكَ وَهُمْ نَآئِمُونَ"
    },
    {
      "ayah_number": 20,
      "text": "فَأَصْبَحَتْ كَالصَّرِيمِۖ"
    },
    {
      "ayah_number": 21,
      "text": "فَتَنَادَوْاْ مُصْبِحِينَ"
    },
    {
      "ayah_number": 22,
      "text": "أَنُ اُ۟غْدُواْ عَلَىٰ حَرْثِكُمُۥٓ إِن كُنتُمْ صَٰرِمِينَۖ"
    },
    {
      "ayah_number": 23,
      "text": "فَانطَلَقُواْ وَهُمْ يَتَخَٰفَتُونَ"
    },
    {
      "ayah_number": 24,
      "text": "أَن لَّا يَدْخُلَنَّهَا اَ۬لْيَوْمَ عَلَيْكُم مِّسْكِينٞۖ"
    },
    {
      "ayah_number": 25,
      "text": "وَغَدَوْاْ عَلَىٰ حَرْدٖ قَٰدِرِينَۖ"
    },
    {
      "ayah_number": 26,
      "text": "فَلَمَّا رَأَوْهَا قَالُوٓاْ إِنَّا لَضَآلُّونَ"
    },
    {
      "ayah_number": 27,
      "text": "بَلْ نَحْنُ مَحْرُومُونَۖ"
    },
    {
      "ayah_number": 28,
      "text": "قَالَ أَوْسَطُهُمُۥٓ أَلَمَ اَقُل لَّكُمْ لَوْلَا تُسَبِّحُونَۖ"
    },
    {
      "ayah_number": 29,
      "text": "قَالُواْ سُبْحَٰنَ رَبِّنَآ إِنَّا كُنَّا ظَٰلِمِينَۖ"
    },
    {
      "ayah_number": 30,
      "text": "فَأَقْبَلَ بَعْضُهُمْ عَلَىٰ بَعْضٖ يَتَلَٰوَمُونَۖ"
    },
    {
      "ayah_number": 31,
      "text": "قَالُواْ يَٰوَيْلَنَآ إِنَّا كُنَّا طَٰغِينَ"
    },
    {
      "ayah_number": 32,
      "text": "عَس۪ىٰ رَبُّنَآ أَنْ يُّبَدِّلَنَا خَيْراٗ مِّنْهَآ إِنَّآ إِلَىٰ رَبِّنَا رَٰغِبُونَۖ"
    },
    {
      "ayah_number": 33,
      "text": "كَذَٰلِكَ اَ۬لْعَذَابُۖ وَلَعَذَابُ اُ۬لَاخِرَةِ أَكْبَرُ لَوْ كَانُواْ يَعْلَمُونَۖ"
    },
    {
      "ayah_number": 34,
      "text": "إِنَّ لِلْمُتَّقِينَ عِندَ رَبِّهِمْ جَنَّٰتِ اِ۬لنَّعِيمِۖ"
    },
    {
      "ayah_number": 35,
      "text": "أَفَنَجْعَلُ اُ۬لْمُسْلِمِينَ كَالْمُجْرِمِينَۖ"
    },
    {
      "ayah_number": 36,
      "text": "مَا لَكُمْۖ كَيْفَ تَحْكُمُونَۖ"
    },
    {
      "ayah_number": 37,
      "text": "أَمْ لَكُمْ كِتَٰبٞ فِيهِ تَدْرُسُونَ"
    },
    {
      "ayah_number": 38,
      "text": "إِنَّ لَكُمْ فِيهِ لَمَا تَخَيَّرُونَۖ"
    },
    {
      "ayah_number": 39,
      "text": "أَمْ لَكُمُۥٓ أَيْمَٰنٌ عَلَيْنَا بَٰلِغَةٌ اِلَىٰ يَوْمِ اِ۬لْقِيَٰمَةِ إِنَّ لَكُمْ لَمَا تَحْكُمُونَۖ"
    },
    {
      "ayah_number": 40,
      "text": "سَلْهُمُۥٓ أَيُّهُم بِذَٰلِكَ زَعِيمٌۖ"
    },
    {
      "ayah_number": 41,
      "text": "اَمْ لَهُمْ شُرَكَآءُ فَلْيَاتُواْ بِشُرَكَآئِهِمُۥٓ إِن كَانُواْ صَٰدِقِينَۖ"
    },
    {
      "ayah_number": 42,
      "text": "يَوْمَ يُكْشَفُ عَن سَاقٖ وَيُدْعَوْنَ إِلَى اَ۬لسُّجُودِ فَلَا يَسْتَطِيعُونَۖ"
    },
    {
      "ayah_number": 43,
      "text": "خَٰشِعَةً اَبْصَٰرُهُمْ تَرْهَقُهُمْ ذِلَّةٞۖ وَقَدْ كَانُواْ يُدْعَوْنَ إِلَى اَ۬لسُّجُودِ وَهُمْ سَٰلِمُونَۖ"
    },
    {
      "ayah_number": 44,
      "text": "فَذَرْنِے وَمَنْ يُّكَذِّبُ بِهَٰذَا اَ۬لْحَدِيثِۖ سَنَسْتَدْرِجُهُم مِّنْ حَيْثُ لَا يَعْلَمُونَ"
    },
    {
      "ayah_number": 45,
      "text": "وَأُمْلِے لَهُمُۥٓۖ إِنَّ كَيْدِے مَتِينٌۖ"
    },
    {
      "ayah_number": 46,
      "text": "اَمْ تَسْـَٔلُهُمُۥٓ أَجْراٗ فَهُم مِّن مَّغْرَمٖ مُّثْقَلُونَۖ"
    },
    {
      "ayah_number": 47,
      "text": "أَمْ عِندَهُمُ اُ۬لْغَيْبُ فَهُمْ يَكْتُبُونَۖ"
    },
    {
      "ayah_number": 48,
      "text": "فَاصْبِرْ لِحُكْمِ رَبِّكَ وَلَا تَكُن كَصَٰحِبِ اِ۬لْحُوتِ إِذْ نَاد۪ىٰ وَهُوَ مَكْظُومٞۖ"
    },
    {
      "ayah_number": 49,
      "text": "لَّوْلَآ أَن تَدَٰرَكَهُۥ نِعْمَةٞ مِّن رَّبِّهِۦ لَنُبِذَ بِالْعَرَآءِ وَهُوَ مَذْمُومٞۖ"
    },
    {
      "ayah_number": 50,
      "text": "فَاجْتَبٰ۪هُ رَبُّهُۥ فَجَعَلَهُۥ مِنَ اَ۬لصَّٰلِحِينَۖ"
    },
    {
      "ayah_number": 51,
      "text": "وَإِنْ يَّكَادُ اُ۬لذِينَ كَفَرُواْ لَيَزْلِقُونَكَ بِأَبْصٰ۪رِهِمْ لَمَّا سَمِعُواْ اُ۬لذِّكْرَ وَيَقُولُونَ إِنَّهُۥ لَمَجْنُونٞۖ"
    },
    {
      "ayah_number": 52,
      "text": "وَمَا هُوَ إِلَّا ذِكْرٞ لِّلْعَٰلَمِينَۖ"
    }
  ]
}