{
  "surah_number": 1,
  "name": "اُ۬لْفَاتِحَةِ",
  "number_of_ayahs": 7,
  "ayahs": [
    {
      "ayah_number": 1,
      "text": "اِ۬لْحَمْدُ لِلهِ رَبِّ اِ۬لْعَٰلَمِينَ"
    },
    {
      "ayah_number": 2,
      "text": "اَ۬لرَّحْمَٰنِ اِ۬لرَّحِيمِ"
    },
    {
      "ayah_number": 3,
      "text": "مَلِكِ يَوْمِ اِ۬لدِّينِۖ"
    },
    {
      "ayah_number": 4,
      "text": "إِيَّاكَ نَعْبُدُ وَإِيَّاكَ نَسْتَعِينُۖ"
    },
    {
      "ayah_number": 5,
      "text": "اُ۪هْدِنَا اَ۬لصِّرَٰطَ اَ۬لْمُسْتَقِيمَ"
    },
    {
      "ayah_number": 6,
      "text": "صِرَٰطَ اَ۬لذِينَ أَنْعَمْتَ عَلَيْهِمْ"
    },
    {
      "ayah_number": 7,
      "text": "غَيْرِ اِ۬لْمَغْضُوبِ عَلَيْهِمْ وَلَا اَ۬لضَّآلِّينَۖ"
    }
  ]
}