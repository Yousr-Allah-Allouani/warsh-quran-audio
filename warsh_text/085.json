{
  "surah_number": 85,
  "name": "اُ۬لْبُرُوجِ",
  "number_of_ayahs": 22,
  "ayahs": [
    {
      "ayah_number": 1,
      "text": "وَالسَّمَآءِ ذَاتِ اِ۬لْبُرُوجِ"
    },
    {
      "ayah_number": 2,
      "text": "وَالْيَوْمِ اِ۬لْمَوْعُودِ"
    },
    {
      "ayah_number": 3,
      "text": "وَشَاهِدٖ وَمَشْهُودٖ"
    },
    {
      "ayah_number": 4,
      "text": "قُتِلَ أَصْحَٰبُ اُ۬لُاخْدُودِ"
    },
    {
      "ayah_number": 5,
      "text": "اِ۬لنّ۪ارِ ذَاتِ اِ۬لْوَقُودِ"
    },
    {
      "ayah_number": 6,
      "text": "إِذْ هُمْ عَلَيْهَا قُعُودٞ"
    },
    {
      "ayah_number": 7,
      "text": "وَهُمْ عَلَىٰ مَا يَفْعَلُونَ بِالْمُومِنِينَ شُهُودٞۖ"
    },
    {
      "ayah_number": 8,
      "text": "وَمَا نَقَمُواْ مِنْهُمُۥٓ إِلَّآ أَنْ يُّومِنُواْ بِاللَّهِ اِ۬لْعَزِيزِ اِ۬لْحَمِيدِ"
    },
    {
      "ayah_number": 9,
      "text": "اِ۬لذِے لَهُۥ مُلْكُ اُ۬لسَّمَٰوَٰتِ وَالَارْضِۖ وَاللَّهُ عَلَىٰ كُلِّ شَےْءٖ شَهِيدٌۖ"
    },
    {
      "ayah_number": 10,
      "text": "اِنَّ اَ۬لذِينَ فَتَنُواْ اُ۬لْمُومِنِينَ وَالْمُومِنَٰتِ ثُمَّ لَمْ يَتُوبُواْ فَلَهُمْ عَذَابُ جَهَنَّمَ وَلَهُمْ عَذَابُ اُ۬لْحَرِيقِۖ"
    },
    {
      "ayah_number": 11,
      "text": "إِنَّ اَ۬لذِينَ ءَامَنُواْ وَعَمِلُواْ اُ۬لصَّٰلِحَٰتِ لَهُمْ جَنَّٰتٞ تَجْرِے مِن تَحْتِهَا اَ۬لَانْهَٰرُۖ ذَٰلِكَ اَ۬لْفَوْزُ اُ۬لْكَبِيرُۖ"
    },
    {
      "ayah_number": 12,
      "text": "إِنَّ بَطْشَ رَبِّكَ لَشَدِيدٌۖ"
    },
    {
      "ayah_number": 13,
      "text": "اِنَّهُۥ هُوَ يُبْدِۓُ وَيُعِيدُۖ"
    },
    {
      "ayah_number": 14,
      "text": "وَهُوَ اَ۬لْغَفُورُ اُ۬لْوَدُودُ"
    },
    {
      "ayah_number": 15,
      "text": "ذُو اُ۬لْعَرْشِۖ اِ۬لْمَجِيدُ"
    },
    {
      "ayah_number": 16,
      "text": "فَعَّالٞ لِّمَا يُرِيدُۖ"
    },
    {
      "ayah_number": 17,
      "text": "هَلَ اَت۪يٰكَ حَدِيثُ اُ۬لْجُنُودِ"
    },
    {
      "ayah_number": 18,
      "text": "فِرْعَوْنَ وَثَمُودَۖ"
    },
    {
      "ayah_number": 19,
      "text": "بَلِ اِ۬لذِينَ كَفَرُواْ فِے تَكْذِيبٖ"
    },
    {
      "ayah_number": 20,
      "text": "وَاللَّهُ مِنْ وَّرَآئِهِم مُّحِيطُۢۖ"
    },
    {
      "ayah_number": 21,
      "text": "بَلْ هُوَ قُرْءَانٞ مَّجِيدٞ"
    },
    {
      "ayah_number": 22,
      "text": "فِے لَوْحٖ مَّحْفُوظٞۖ"
    }
  ]
}