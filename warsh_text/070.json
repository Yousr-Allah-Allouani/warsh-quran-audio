{
  "surah_number": 70,
  "name": "اُ۬لْمَعَارِجِ",
  "number_of_ayahs": 44,
  "ayahs": [
    {
      "ayah_number": 1,
      "text": "سَالَ سَآئِلُۢ بِعَذَابٖ وَاقِعٖ"
    },
    {
      "ayah_number": 2,
      "text": "لِّلْكٰ۪فِرِينَ لَيْسَ لَهُۥ دَافِعٞ"
    },
    {
      "ayah_number": 3,
      "text": "مِّنَ اَ۬للَّهِ ذِے اِ۬لْمَعَارِجِۖ"
    },
    {
      "ayah_number": 4,
      "text": "تَعْرُجُ اُ۬لْمَلَٰٓئِكَةُ وَالرُّوحُ إِلَيْهِ فِے يَوْمٖ كَانَ مِقْدَارُهُۥ خَمْسِينَ أَلْفَ سَنَةٖۖ"
    },
    {
      "ayah_number": 5,
      "text": "فَاصْبِرْ صَبْراٗ جَمِيلاًۖ"
    },
    {
      "ayah_number": 6,
      "text": "اِنَّهُمْ يَرَوْنَهُۥ بَعِيداٗ"
    },
    {
      "ayah_number": 7,
      "text": "وَنَر۪يٰهُ قَرِيباٗۖ"
    },
    {
      "ayah_number": 8,
      "text": "يَوْمَ تَكُونُ اُ۬لسَّمَآءُ كَالْمُهْلِ"
    },
    {
      "ayah_number": 9,
      "text": "وَتَكُونُ اُ۬لْجِبَالُ كَالْعِهْنِ"
    },
    {
      "ayah_number": 10,
      "text": "وَلَا يَسْـَٔلُ حَمِيمٌ حَمِيماٗ"
    },
    {
      "ayah_number": 11,
      "text": "يُبَصَّرُونَهُمْۖ يَوَدُّ اُ۬لْمُجْرِمُ لَوْ يَفْتَدِے مِنْ عَذَابِ يَوْمَئِذِۢ بِبَنِيهِ"
    },
    {
      "ayah_number": 12,
      "text": "وَصَٰحِبَتِهِۦ وَأَخِيهِ"
    },
    {
      "ayah_number": 13,
      "text": "وَفَصِيلَتِهِ اِ۬لتِے تُـْٔوِيهِ"
    },
    {
      "ayah_number": 14,
      "text": "وَمَن فِے اِ۬لَارْضِ جَمِيعاٗ ثُمَّ يُنجِيهِ"
    },
    {
      "ayah_number": 15,
      "text": "كَلَّآۖ إِنَّهَا لَظ۪ىٰ"
    },
    {
      "ayah_number": 16,
      "text": "نَزَّاعَةٞ لِّلشَّو۪ىٰ"
    },
    {
      "ayah_number": 17,
      "text": "تَدْعُواْ مَنَ اَدْبَرَ وَتَوَلّ۪ىٰ"
    },
    {
      "ayah_number": 18,
      "text": "وَجَمَعَ فَأَوْع۪ىٰٓۖ"
    },
    {
      "ayah_number": 19,
      "text": "إِنَّ اَ۬لِانسَٰنَ خُلِقَ هَلُوعاً"
    },
    {
      "ayah_number": 20,
      "text": "اِذَا مَسَّهُ اُ۬لشَّرُّ جَزُوعاٗ"
    },
    {
      "ayah_number": 21,
      "text": "وَإِذَا مَسَّهُ اُ۬لْخَيْرُ مَنُوعاً"
    },
    {
      "ayah_number": 22,
      "text": "اِلَّا اَ۬لْمُصَلِّينَ"
    },
    {
      "ayah_number": 23,
      "text": "اَ۬لذِينَ هُمْ عَلَىٰ صَلَاتِهِمْ دَآئِمُونَۖ"
    },
    {
      "ayah_number": 24,
      "text": "وَالذِينَ فِےٓ أَمْوَٰلِهِمْ حَقّٞ مَّعْلُومٞ"
    },
    {
      "ayah_number": 25,
      "text": "لِّلسَّآئِلِ وَالْمَحْرُومِۖ"
    },
    {
      "ayah_number": 26,
      "text": "وَالذِينَ يُصَدِّقُونَ بِيَوْمِ اِ۬لدِّينِۖ"
    },
    {
      "ayah_number": 27,
      "text": "وَالذِينَ هُم مِّنْ عَذَابِ رَبِّهِم مُّشْفِقُونَ"
    },
    {
      "ayah_number": 28,
      "text": "إِنَّ عَذَابَ رَبِّهِمْ غَيْرُ مَامُونٖۖ"
    },
    {
      "ayah_number": 29,
      "text": "وَالذِينَ هُمْ لِفُرُوجِهِمْ حَٰفِظُونَ"
    },
    {
      "ayah_number": 30,
      "text": "إِلَّا عَلَىٰٓ أَزْوَٰجِهِمُۥٓ أَوْ مَا مَلَكَتَ اَيْمَٰنُهُمْ فَإِنَّهُمْ غَيْرُ مَلُومِينَۖ"
    },
    {
      "ayah_number": 31,
      "text": "فَمَنِ اِ۪بْتَغ۪ىٰ وَرَآءَ ذَٰلِكَ فَأُوْلَٰٓئِكَ هُمُ اُ۬لْعَادُونَۖ"
    },
    {
      "ayah_number": 32,
      "text": "وَالذِينَ هُمْ لِأَمَٰنَٰتِهِمْ وَعَهْدِهِمْ رَٰعُونَۖ"
    },
    {
      "ayah_number": 33,
      "text": "وَالذِينَ هُم بِشَهَٰدَتِهِمْ قَآئِمُونَۖ"
    },
    {
      "ayah_number": 34,
      "text": "وَالذِينَ هُمْ عَلَىٰ صَلَاتِهِمْ يُحَافِظُونَ"
    },
    {
      "ayah_number": 35,
      "text": "أُوْلَٰٓئِكَ فِے جَنَّٰتٖ مُّكْرَمُونَۖ"
    },
    {
      "ayah_number": 36,
      "text": "فَمَالِ اِ۬لذِينَ كَفَرُواْ قِبَلَكَ مُهْطِعِينَ"
    },
    {
      "ayah_number": 37,
      "text": "عَنِ اِ۬لْيَمِينِ وَعَنِ اِ۬لشِّمَالِ عِزِينَۖ"
    },
    {
      "ayah_number": 38,
      "text": "أَيَطْمَعُ كُلُّ اُ۪مْرِےٕٖ مِّنْهُمُۥٓ أَنْ يُّدْخَلَ جَنَّةَ نَعِيمٖ"
    },
    {
      "ayah_number": 39,
      "text": "كَلَّآۖ إِنَّا خَلَقْنَٰهُم مِّمَّا يَعْلَمُونَۖ"
    },
    {
      "ayah_number": 40,
      "text": "فَلَآ أُقْسِمُ بِرَبِّ اِ۬لْمَشَٰرِقِ وَالْمَغَٰرِبِ إِنَّا لَقَٰدِرُونَ"
    },
    {
      "ayah_number": 41,
      "text": "عَلَىٰٓ أَن نُّبَدِّلَ خَيْراٗ مِّنْهُمْ وَمَا نَحْنُ بِمَسْبُوقِينَۖ"
    },
    {
      "ayah_number": 42,
      "text": "فَذَرْهُمْ يَخُوضُواْ وَيَلْعَبُواْ حَتَّىٰ يُلَٰقُواْ يَوْمَهُمُ اُ۬لذِے يُوعَدُونَ"
    },
    {
      "ayah_number": 43,
      "text": "يَوْمَ يَخْرُجُونَ مِنَ اَ۬لَاجْدَاثِ سِرَاعاٗ كَأَنَّهُمُۥٓ إِلَىٰ نَصْبٖ يُوفِضُونَ"
    },
    {
      "ayah_number": 44,
      "text": "خَٰشِعَةً اَبْصَٰرُهُمْ تَرْهَقُهُمْ ذِلَّةٞۖ ذَٰلِكَ اَ۬لْيَوْمُ اُ۬لذِے كَانُواْ يُوعَدُونَۖ"
    }
  ]
}