{
  "surah_number": 75,
  "name": "اُ۬لْقِيَٰمَةِ",
  "number_of_ayahs": 39,
  "ayahs": [
    {
      "ayah_number": 1,
      "text": "لَآ أُقْسِمُ بِيَوْمِ اِ۬لْقِيَٰمَةِ"
    },
    {
      "ayah_number": 2,
      "text": "وَلَآ أُقْسِمُ بِالنَّفْسِ اِ۬للَّوَّامَةِۖ"
    },
    {
      "ayah_number": 3,
      "text": "أَيَحْسِبُ اُ۬لِانسَٰنُ أَلَّن نَّجْمَعَ عِظَامَهُۥ"
    },
    {
      "ayah_number": 4,
      "text": "بَل۪ىٰۖ قَٰدِرِينَ عَلَىٰٓ أَن نُّسَوِّيَ بَنَانَهُۥۖ"
    },
    {
      "ayah_number": 5,
      "text": "بَلْ يُرِيدُ اُ۬لِانسَٰنُ لِيَفْجُرَ أَمَامَهُۥۖ"
    },
    {
      "ayah_number": 6,
      "text": "يَسْـَٔلُ أَيَّانَ يَوْمُ اُ۬لْقِيَٰمَةِۖ"
    },
    {
      "ayah_number": 7,
      "text": "فَإِذَا بَرَقَ اَ۬لْبَصَرُ"
    },
    {
      "ayah_number": 8,
      "text": "وَخَسَفَ اَ۬لْقَمَرُ"
    },
    {
      "ayah_number": 9,
      "text": "وَجُمِعَ اَ۬لشَّمْسُ وَالْقَمَرُ"
    },
    {
      "ayah_number": 10,
      "text": "يَقُولُ اُ۬لِانسَٰنُ يَوْمَئِذٍ اَيْنَ اَ۬لْمَفَرُّۖ"
    },
    {
      "ayah_number": 11,
      "text": "كَلَّا لَا وَزَرَۖ"
    },
    {
      "ayah_number": 12,
      "text": "إِلَىٰ رَبِّكَ يَوْمَئِذٍ اِ۬لْمُسْتَقَرُّۖ"
    },
    {
      "ayah_number": 13,
      "text": "يُنَبَّؤُاْ اُ۬لِانسَٰنُ يَوْمَئِذِۢ بِمَا قَدَّمَ وَأَخَّرَۖ"
    },
    {
      "ayah_number": 14,
      "text": "بَلِ اِ۬لِانسَٰنُ عَلَىٰ نَفْسِهِۦ بَصِيرَةٞ"
    },
    {
      "ayah_number": 15,
      "text": "وَلَوَ اَلْق۪ىٰ مَعَاذِيرَهُۥۖ"
    },
    {
      "ayah_number": 16,
      "text": "لَا تُحَرِّكْ بِهِۦ لِسَانَكَ لِتَعْجَلَ بِهِۦٓۖ إِنَّ عَلَيْنَا جَمْعَهُۥ وَقُرْءَانَهُۥۖ"
    },
    {
      "ayah_number": 17,
      "text": "فَإِذَا قَرَأْنَٰهُ فَاتَّبِعْ قُرْءَانَهُۥ"
    },
    {
      "ayah_number": 18,
      "text": "ثُمَّ إِنَّ عَلَيْنَا بَيَانَهُۥۖ"
    },
    {
      "ayah_number": 19,
      "text": "كَلَّا بَلْ تُحِبُّونَ اَ۬لْعَاجِلَةَ"
    },
    {
      "ayah_number": 20,
      "text": "وَتَذَرُونَ اَ۬لَاخِرَةَۖ"
    },
    {
      "ayah_number": 21,
      "text": "وُجُوهٞ يَوْمَئِذٖ نَّاضِرَةٌ"
    },
    {
      "ayah_number": 22,
      "text": "اِلَىٰ رَبِّهَا نَاظِرَةٞۖ"
    },
    {
      "ayah_number": 23,
      "text": "وَوُجُوهٞ يَوْمَئِذِۢ بَاسِرَةٞ"
    },
    {
      "ayah_number": 24,
      "text": "تَظُنُّ أَنْ يُّفْعَلَ بِهَا فَاقِرَةٞۖ"
    },
    {
      "ayah_number": 25,
      "text": "كَلَّآ إِذَا بَلَغَتِ اِ۬لتَّرَاقِيَ"
    },
    {
      "ayah_number": 26,
      "text": "وَقِيلَ مَن رَّاقٖ"
    },
    {
      "ayah_number": 27,
      "text": "وَظَنَّ أَنَّهُ اُ۬لْفِرَاقُ"
    },
    {
      "ayah_number": 28,
      "text": "وَالْتَفَّتِ اِ۬لسَّاقُ بِالسَّاقِ"
    },
    {
      "ayah_number": 29,
      "text": "إِلَىٰ رَبِّكَ يَوْمَئِذٍ اِ۬لْمَسَاقُۖ"
    },
    {
      "ayah_number": 30,
      "text": "فَلَا صَدَّقَ وَلَا صَلّ۪ىٰۖ"
    },
    {
      "ayah_number": 31,
      "text": "وَلَٰكِن كَذَّبَ وَتَوَلّ۪ىٰۖ"
    },
    {
      "ayah_number": 32,
      "text": "ثُمَّ ذَهَبَ إِلَىٰٓ أَهْلِهِۦ يَتَمَطّ۪ىٰٓۖ"
    },
    {
      "ayah_number": 33,
      "text": "أَوْل۪ىٰ لَكَ فَأَوْل۪ىٰ"
    },
    {
      "ayah_number": 34,
      "text": "ثُمَّ أَوْل۪ىٰ لَكَ فَأَوْل۪ىٰٓۖ"
    },
    {
      "ayah_number": 35,
      "text": "أَيَحْسِبُ اُ۬لِانسَٰنُ أَنْ يُّتْرَكَ سُدىًۖ"
    },
    {
      "ayah_number": 36,
      "text": "اَلَمْ يَكُ نُطْفَةٗ مِّن مَّنِيّٖ تُمْن۪ىٰ"
    },
    {
      "ayah_number": 37,
      "text": "ثُمَّ كَانَ عَلَقَةٗ فَخَلَقَ فَسَوّ۪ىٰ"
    },
    {
      "ayah_number": 38,
      "text": "فَجَعَلَ مِنْهُ اُ۬لزَّوْجَيْنِ اِ۬لذَّكَرَ وَالُانث۪ىٰٓۖ"
    },
    {
      "ayah_number": 39,
      "text": "أَلَيْسَ ذَٰلِكَ بِقَٰدِرٍ عَلَىٰٓ أَنْ يُّحْـِۧيَ اَ۬لْمَوْت۪ىٰۖ"
    }
  ]
}