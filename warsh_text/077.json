{
  "surah_number": 77,
  "name": "اُ۬لْمُرْسَلَٰتِ",
  "number_of_ayahs": 50,
  "ayahs": [
    {
      "ayah_number": 1,
      "text": "وَالْمُرْسَلَٰتِ عُرْفاٗ"
    },
    {
      "ayah_number": 2,
      "text": "فَالْعَٰصِفَٰتِ عَصْفاٗ"
    },
    {
      "ayah_number": 3,
      "text": "وَالنَّٰشِرَٰتِ نَشْراٗ"
    },
    {
      "ayah_number": 4,
      "text": "فَالْفَٰرِقَٰتِ فَرْقاٗ"
    },
    {
      "ayah_number": 5,
      "text": "فَالْمُلْقِيَٰتِ ذِكْراً"
    },
    {
      "ayah_number": 6,
      "text": "عُذْراً اَوْ نُذُراً"
    },
    {
      "ayah_number": 7,
      "text": "اِنَّمَا تُوعَدُونَ لَوَٰقِعٞۖ"
    },
    {
      "ayah_number": 8,
      "text": "فَإِذَا اَ۬لنُّجُومُ طُمِسَتْ"
    },
    {
      "ayah_number": 9,
      "text": "وَإِذَا اَ۬لسَّمَآءُ فُرِجَتْ"
    },
    {
      "ayah_number": 10,
      "text": "وَإِذَا اَ۬لْجِبَالُ نُسِفَتْ"
    },
    {
      "ayah_number": 11,
      "text": "وَإِذَا اَ۬لرُّسُلُ أُقِّتَتْ"
    },
    {
      "ayah_number": 12,
      "text": "لِأَيِّ يَوْمٍ ا۟جِّلَتْ"
    },
    {
      "ayah_number": 13,
      "text": "لِيَوْمِ اِ۬لْفَصْلِۖ"
    },
    {
      "ayah_number": 14,
      "text": "وَمَآ أَدْر۪يٰكَ مَا يَوْمُ اُ۬لْفَصْلِۖ"
    },
    {
      "ayah_number": 15,
      "text": "وَيْلٞ يَوْمَئِذٖ لِّلْمُكَذِّبِينَۖ"
    },
    {
      "ayah_number": 16,
      "text": "أَلَمْ نُهْلِكِ اِ۬لَاوَّلِينَۖ"
    },
    {
      "ayah_number": 17,
      "text": "ثُمَّ نُتْبِعُهُمُ اُ۬لَاخِرِينَۖ"
    },
    {
      "ayah_number": 18,
      "text": "كَذَٰلِكَ نَفْعَلُ بِالْمُجْرِمِينَۖ"
    },
    {
      "ayah_number": 19,
      "text": "وَيْلٞ يَوْمَئِذٖ لِّلْمُكَذِّبِينَۖ"
    },
    {
      "ayah_number": 20,
      "text": "أَلَمْ نَخْلُقكُّم مِّن مَّآءٖ مَّهِينٖ"
    },
    {
      "ayah_number": 21,
      "text": "فَجَعَلْنَٰهُ فِے قَر۪ارٖ مَّكِينٍ"
    },
    {
      "ayah_number": 22,
      "text": "اِلَىٰ قَدَرٖ مَّعْلُومٖ"
    },
    {
      "ayah_number": 23,
      "text": "فَقَدَّرْنَاۖ فَنِعْمَ اَ۬لْقَٰدِرُونَۖ"
    },
    {
      "ayah_number": 24,
      "text": "وَيْلٞ يَوْمَئِذٖ لِّلْمُكَذِّبِينَۖ"
    },
    {
      "ayah_number": 25,
      "text": "أَلَمْ نَجْعَلِ اِ۬لَارْضَ كِفَاتاً"
    },
    {
      "ayah_number": 26,
      "text": "اَحْيَآءٗ وَأَمْوَٰتاٗ"
    },
    {
      "ayah_number": 27,
      "text": "وَجَعَلْنَا فِيهَا رَوَٰسِيَ شَٰمِخَٰتٖ وَأَسْقَيْنَٰكُم مَّآءٗ فُرَاتاٗۖ"
    },
    {
      "ayah_number": 28,
      "text": "وَيْلٞ يَوْمَئِذٖ لِّلْمُكَذِّبِينَۖ"
    },
    {
      "ayah_number": 29,
      "text": "اَ۪نطَلِقُوٓاْ إِلَىٰ مَا كُنتُم بِهِۦ تُكَذِّبُونَ"
    },
    {
      "ayah_number": 30,
      "text": "اَ۪نطَلِقُوٓاْ إِلَىٰ ظِلّٖ ذِے ثَلَٰثِ شُعَبٖ"
    },
    {
      "ayah_number": 31,
      "text": "لَّا ظَلِيلٖ وَلَا يُغْنِے مِنَ اَ۬للَّهَبِۖ"
    },
    {
      "ayah_number": 32,
      "text": "إِنَّهَا تَرْمِے بِشَرَرٖ كَالْقَصْرِ"
    },
    {
      "ayah_number": 33,
      "text": "كَأَنَّهُۥ جِمَٰلَٰتٞ صُفْرٞۖ"
    },
    {
      "ayah_number": 34,
      "text": "وَيْلٞ يَوْمَئِذٖ لِّلْمُكَذِّبِينَۖ"
    },
    {
      "ayah_number": 35,
      "text": "هَٰذَا يَوْمُ لَا يَنطِقُونَ"
    },
    {
      "ayah_number": 36,
      "text": "وَلَا يُوذَنُ لَهُمْ فَيَعْتَذِرُونَۖ"
    },
    {
      "ayah_number": 37,
      "text": "وَيْلٞ يَوْمَئِذٖ لِّلْمُكَذِّبِينَۖ"
    },
    {
      "ayah_number": 38,
      "text": "هَٰذَا يَوْمُ اُ۬لْفَصْلِ جَمَعْنَٰكُمْ وَالَاوَّلِينَ"
    },
    {
      "ayah_number": 39,
      "text": "فَإِن كَانَ لَكُمْ كَيْدٞ فَكِيدُونِۖ"
    },
    {
      "ayah_number": 40,
      "text": "وَيْلٞ يَوْمَئِذٖ لِّلْمُكَذِّبِينَۖ"
    },
    {
      "ayah_number": 41,
      "text": "إِنَّ اَ۬لْمُتَّقِينَ فِے ظِلَٰلٖ وَعُيُونٖ"
    },
    {
      "ayah_number": 42,
      "text": "وَفَوَٰكِهَ مِمَّا يَشْتَهُونَۖ"
    },
    {
      "ayah_number": 43,
      "text": "كُلُواْ وَاشْرَبُواْۖ هَنِيٓـٔاَۢ بِمَا كُنتُمْ تَعْمَلُونَۖ"
    },
    {
      "ayah_number": 44,
      "text": "إِنَّا كَذَٰلِكَ نَجْزِے اِ۬لْمُحْسِنِينَۖ"
    },
    {
      "ayah_number": 45,
      "text": "وَيْلٞ يَوْمَئِذٖ لِّلْمُكَذِّبِينَۖ"
    },
    {
      "ayah_number": 46,
      "text": "كُلُواْ وَتَمَتَّعُواْ قَلِيلاً اِنَّكُم مُّجْرِمُونَۖ"
    },
    {
      "ayah_number": 47,
      "text": "وَيْلٞ يَوْمَئِذٖ لِّلْمُكَذِّبِينَۖ"
    },
    {
      "ayah_number": 48,
      "text": "وَإِذَا قِيلَ لَهُمُ اُ۪رْكَعُواْ لَا يَرْكَعُونَۖ"
    },
    {
      "ayah_number": 49,
      "text": "وَيْلٞ يَوْمَئِذٖ لِّلْمُكَذِّبِينَۖ"
    },
    {
      "ayah_number": 50,
      "text": "فَبِأَيِّ حَدِيثِۢ بَعْدَهُۥ يُومِنُونَۖ"
    }
  ]
}