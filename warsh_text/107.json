{
  "surah_number": 107,
  "name": "اُ۬لْمَاعُونِ",
  "number_of_ayahs": 6,
  "ayahs": [
    {
      "ayah_number": 1,
      "text": "اَرَٰٓيْتَ اَ۬لذِے يُكَذِّبُ بِالدِّينِ"
    },
    {
      "ayah_number": 2,
      "text": "فَذَٰلِكَ اَ۬لذِے يَدُعُّ اُ۬لْيَتِيمَ"
    },
    {
      "ayah_number": 3,
      "text": "وَلَا يَحُضُّ عَلَىٰ طَعَامِ اِ۬لْمِسْكِينِۖ"
    },
    {
      "ayah_number": 4,
      "text": "فَوَيْلٞ لِّلْمُصَلِّينَ"
    },
    {
      "ayah_number": 5,
      "text": "اَ۬لذِينَ هُمْ عَن صَلَاتِهِمْ سَاهُونَ"
    },
    {
      "ayah_number": 6,
      "text": "اَ۬لذِينَ هُمْ يُرَآءُونَ وَيَمْنَعُونَ اَ۬لْمَاعُونَۖ"
    }
  ]
}