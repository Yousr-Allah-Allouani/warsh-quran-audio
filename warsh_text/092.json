{
  "surah_number": 92,
  "name": "اُ۬ليْلِ",
  "number_of_ayahs": 21,
  "ayahs": [
    {
      "ayah_number": 1,
      "text": "وَاليْلِ إِذَا يَغْش۪ىٰ"
    },
    {
      "ayah_number": 2,
      "text": "وَالنَّه۪ارِ إِذَا تَجَلّ۪ىٰ"
    },
    {
      "ayah_number": 3,
      "text": "وَمَا خَلَقَ اَ۬لذَّكَرَ وَالُانث۪ىٰٓ"
    },
    {
      "ayah_number": 4,
      "text": "إِنَّ سَعْيَكُمْ لَشَتّ۪ىٰۖ"
    },
    {
      "ayah_number": 5,
      "text": "فَأَمَّا مَنَ اَعْط۪ىٰ وَاتَّق۪ىٰ"
    },
    {
      "ayah_number": 6,
      "text": "وَصَدَّقَ بِالْحُسْن۪ىٰ"
    },
    {
      "ayah_number": 7,
      "text": "فَسَنُيَسِّرُهُۥ لِلْيُسْر۪ىٰۖ"
    },
    {
      "ayah_number": 8,
      "text": "وَأَمَّا مَنۢ بَخِلَ وَاسْتَغْن۪ىٰ"
    },
    {
      "ayah_number": 9,
      "text": "وَكَذَّبَ بِالْحُسْن۪ىٰ"
    },
    {
      "ayah_number": 10,
      "text": "فَسَنُيَسِّرُهُۥ لِلْعُسْر۪ىٰۖ"
    },
    {
      "ayah_number": 11,
      "text": "وَمَا يُغْنِے عَنْهُ مَالُهُۥٓ إِذَا تَرَدّ۪ىٰٓۖ"
    },
    {
      "ayah_number": 12,
      "text": "إِنَّ عَلَيْنَا لَلْهُد۪ىٰ"
    },
    {
      "ayah_number": 13,
      "text": "وَإِنَّ لَنَا لَلَاخِرَةَ وَالُاول۪ىٰۖ"
    },
    {
      "ayah_number": 14,
      "text": "فَأَنذَرْتُكُمْ نَاراٗ تَلَظّ۪ىٰ"
    },
    {
      "ayah_number": 15,
      "text": "لَا يَصْلَيٰهَآ إِلَّا اَ۬لَاشْقَي"
    },
    {
      "ayah_number": 16,
      "text": "اَ۬لذِے كَذَّبَ وَتَوَلّ۪ىٰۖ"
    },
    {
      "ayah_number": 17,
      "text": "وَسَيُجَنَّبُهَا اَ۬لَاتْقَي"
    },
    {
      "ayah_number": 18,
      "text": "اَ۬لذِے يُوتِے مَالَهُۥ يَتَزَكّ۪ىٰۖ"
    },
    {
      "ayah_number": 19,
      "text": "وَمَا لِأَحَدٍ عِندَهُۥ مِن نِّعْمَةٖ تُجْز۪ىٰٓ"
    },
    {
      "ayah_number": 20,
      "text": "إِلَّا اَ۪بْتِغَآءَ وَجْهِ رَبِّهِ اِ۬لَاعْل۪ىٰۖ"
    },
    {
      "ayah_number": 21,
      "text": "وَلَسَوْفَ يَرْض۪ىٰۖ"
    }
  ]
}