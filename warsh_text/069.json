{
  "surah_number": 69,
  "name": "اُ۬لْحَآقَّةِ",
  "number_of_ayahs": 52,
  "ayahs": [
    {
      "ayah_number": 1,
      "text": "اَ۬لْحَآقَّةُ مَا اَ۬لْحَآقَّةُۖ"
    },
    {
      "ayah_number": 2,
      "text": "وَمَآ أَدْر۪يٰكَ مَا اَ۬لْحَآقَّةُۖ"
    },
    {
      "ayah_number": 3,
      "text": "كَذَّبَتْ ثَمُودُ وَعَادُۢ بِالْقَارِعَةِۖ"
    },
    {
      "ayah_number": 4,
      "text": "فَأَمَّا ثَمُودُ فَأُهْلِكُواْ بِالطَّاغِيَةِۖ"
    },
    {
      "ayah_number": 5,
      "text": "وَأَمَّا عَادٞ فَأُهْلِكُواْ بِرِيحٖ صَرْصَرٍ عَاتِيَةٖ"
    },
    {
      "ayah_number": 6,
      "text": "سَخَّرَهَا عَلَيْهِمْ سَبْعَ لَيَالٖ وَثَمَٰنِيَةَ أَيَّامٍ حُسُوماٗۖ فَتَرَى اَ۬لْقَوْمَ فِيهَا صَرْع۪ىٰ كَأَنَّهُمُۥٓ أَعْجَازُ نَخْلٍ خَاوِيَةٖۖ"
    },
    {
      "ayah_number": 7,
      "text": "فَهَلْ تَر۪ىٰ لَهُم مِّنۢ بَاقِيَةٖۖ"
    },
    {
      "ayah_number": 8,
      "text": "وَجَآءَ فِرْعَوْنُ وَمَن قَبْلَهُۥ وَالْمُوتَفِكَٰتُ بِالْخَاطِئَةِ"
    },
    {
      "ayah_number": 9,
      "text": "فَعَصَوْاْ رَسُولَ رَبِّهِمْ فَأَخَذَهُمُۥٓ أَخْذَةٗ رَّابِيَةًۖ"
    },
    {
      "ayah_number": 10,
      "text": "اِنَّا لَمَّا طَغَا اَ۬لْمَآءُ حَمَلْنَٰكُمْ فِے اِ۬لْجَارِيَةِ"
    },
    {
      "ayah_number": 11,
      "text": "لِنَجْعَلَهَا لَكُمْ تَذْكِرَةٗ وَتَعِيَهَآ أُذْنٞ وَٰعِيَةٞۖ"
    },
    {
      "ayah_number": 12,
      "text": "فَإِذَا نُفِخَ فِے اِ۬لصُّورِ نَفْخَةٞ وَٰحِدَةٞ"
    },
    {
      "ayah_number": 13,
      "text": "وَحُمِلَتِ اِ۬لَارْضُ وَالْجِبَالُ فَدُكَّتَا دَكَّةٗ وَٰحِدَةٗ"
    },
    {
      "ayah_number": 14,
      "text": "فَيَوْمَئِذٖ وَقَعَتِ اِ۬لْوَاقِعَةُ"
    },
    {
      "ayah_number": 15,
      "text": "وَانشَقَّتِ اِ۬لسَّمَآءُ فَهِيَ يَوْمَئِذٖ وَاهِيَةٞ"
    },
    {
      "ayah_number": 16,
      "text": "وَالْمَلَكُ عَلَىٰٓ أَرْجَآئِهَاۖ وَيَحْمِلُ عَرْشَ رَبِّكَ فَوْقَهُمْ يَوْمَئِذٖ ثَمَٰنِيَةٞ"
    },
    {
      "ayah_number": 17,
      "text": "يَوْمَئِذٖ تُعْرَضُونَ لَا تَخْف۪ىٰ مِنكُمْ خَافِيَةٞۖ"
    },
    {
      "ayah_number": 18,
      "text": "فَأَمَّا مَنُ ا۟وتِيَ كِتَٰبَهُۥ بِيَمِينِهِۦ فَيَقُولُ هَآؤُمُ اُ۪قْرَءُواْ كِتَٰبِيَهْۖ"
    },
    {
      "ayah_number": 19,
      "text": "إِنِّے ظَنَنتُ أَنِّے مُلَٰقٍ حِسَابِيَهْۖ"
    },
    {
      "ayah_number": 20,
      "text": "فَهُوَ فِے عِيشَةٖ رَّاضِيَةٖ"
    },
    {
      "ayah_number": 21,
      "text": "فِے جَنَّةٍ عَالِيَةٖ"
    },
    {
      "ayah_number": 22,
      "text": "قُطُوفُهَا دَانِيَةٞۖ"
    },
    {
      "ayah_number": 23,
      "text": "كُلُواْ وَاشْرَبُواْۖ هَنِيٓـٔاَۢ بِمَآ أَسْلَفْتُمْ فِے اِ۬لَايَّامِ اِ۬لْخَالِيَةِۖ"
    },
    {
      "ayah_number": 24,
      "text": "وَأَمَّا مَنُ ا۟وتِيَ كِتَٰبَهُۥ بِشِمَالِهِۦ"
    },
    {
      "ayah_number": 25,
      "text": "فَيَقُولُ يَٰلَيْتَنِے لَمُ ا۟وتَ كِتَٰبِيَهْۖ"
    },
    {
      "ayah_number": 26,
      "text": "وَلَمَ اَدْرِ مَا حِسَابِيَهْۖ"
    },
    {
      "ayah_number": 27,
      "text": "يَٰلَيْتَهَا كَانَتِ اِ۬لْقَاضِيَةَ"
    },
    {
      "ayah_number": 28,
      "text": "مَآ أَغْن۪ىٰ عَنِّے مَالِيَهۖ"
    },
    {
      "ayah_number": 29,
      "text": "هَّلَكَ عَنِّے سُلْطَٰنِيَهْۖ"
    },
    {
      "ayah_number": 30,
      "text": "خُذُوهُ فَغُلُّوهُ"
    },
    {
      "ayah_number": 31,
      "text": "ثُمَّ اَ۬لْجَحِيمَ صَلُّوهُ"
    },
    {
      "ayah_number": 32,
      "text": "ثُمَّ فِے سِلْسِلَةٖ ذَرْعُهَا سَبْعُونَ ذِرَاعاٗ فَاسْلُكُوهُۖ"
    },
    {
      "ayah_number": 33,
      "text": "إِنَّهُۥ كَانَ لَا يُومِنُ بِاللَّهِ اِ۬لْعَظِيمِ"
    },
    {
      "ayah_number": 34,
      "text": "وَلَا يَحُضُّ عَلَىٰ طَعَامِ اِ۬لْمِسْكِينِۖ"
    },
    {
      "ayah_number": 35,
      "text": "فَلَيْسَ لَهُ اُ۬لْيَوْمَ هَٰهُنَا حَمِيمٞ"
    },
    {
      "ayah_number": 36,
      "text": "وَلَا طَعَامٌ اِلَّا مِنْ غِسْلِينٖ"
    },
    {
      "ayah_number": 37,
      "text": "لَّا يَاكُلُهُۥٓ إِلَّا اَ۬لْخَٰطِـُٔونَۖ"
    },
    {
      "ayah_number": 38,
      "text": "فَلَآ أُقْسِمُ بِمَا تُبْصِرُونَ"
    },
    {
      "ayah_number": 39,
      "text": "وَمَا لَا تُبْصِرُونَ"
    },
    {
      "ayah_number": 40,
      "text": "إِنَّهُۥ لَقَوْلُ رَسُولٖ كَرِيمٖ"
    },
    {
      "ayah_number": 41,
      "text": "وَمَا هُوَ بِقَوْلِ شَاعِرٖ قَلِيلاٗ مَّا تُومِنُونَ"
    },
    {
      "ayah_number": 42,
      "text": "وَلَا بِقَوْلِ كَاهِنٖۖ قَلِيلاٗ مَّا تَذَّكَّرُونَۖ"
    },
    {
      "ayah_number": 43,
      "text": "تَنزِيلٞ مِّن رَّبِّ اِ۬لْعَٰلَمِينَۖ"
    },
    {
      "ayah_number": 44,
      "text": "وَلَوْ تَقَوَّلَ عَلَيْنَا بَعْضَ اَ۬لَاقَاوِيلِ"
    },
    {
      "ayah_number": 45,
      "text": "لَأَخَذْنَا مِنْهُ بِالْيَمِينِ"
    },
    {
      "ayah_number": 46,
      "text": "ثُمَّ لَقَطَعْنَا مِنْهُ اُ۬لْوَتِينَ"
    },
    {
      "ayah_number": 47,
      "text": "فَمَا مِنكُم مِّنَ اَحَدٍ عَنْهُ حَٰجِزِينَۖ"
    },
    {
      "ayah_number": 48,
      "text": "وَإِنَّهُۥ لَتَذْكِرَةٞ لِّلْمُتَّقِينَۖ"
    },
    {
      "ayah_number": 49,
      "text": "وَإِنَّا لَنَعْلَمُ أَنَّ مِنكُم مُّكَذِّبِينَۖ"
    },
    {
      "ayah_number": 50,
      "text": "وَإِنَّهُۥ لَحَسْرَةٌ عَلَى اَ۬لْكٰ۪فِرِينَۖ"
    },
    {
      "ayah_number": 51,
      "text": "وَإِنَّهُۥ لَحَقُّ اُ۬لْيَقِينِۖ"
    },
    {
      "ayah_number": 52,
      "text": "فَسَبِّحْ بِاسْمِ رَبِّكَ اَ۬لْعَظِيمِۖ"
    }
  ]
}