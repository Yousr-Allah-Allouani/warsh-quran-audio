{
  "surah_number": 100,
  "name": "اُ۬لْعَٰدِيَٰتِ",
  "number_of_ayahs": 11,
  "ayahs": [
    {
      "ayah_number": 1,
      "text": "وَالْعَٰدِيَٰتِ ضَبْحاٗ"
    },
    {
      "ayah_number": 2,
      "text": "فَالْمُورِيَٰتِ قَدْحاٗ"
    },
    {
      "ayah_number": 3,
      "text": "فَالْمُغِيرَٰتِ صُبْحاٗ"
    },
    {
      "ayah_number": 4,
      "text": "فَأَثَرْنَ بِهِۦ نَقْعاٗ"
    },
    {
      "ayah_number": 5,
      "text": "فَوَسَطْنَ بِهِۦ جَمْعاً"
    },
    {
      "ayah_number": 6,
      "text": "اِنَّ اَ۬لِانسَٰنَ لِرَبِّهِۦ لَكَنُودٞ"
    },
    {
      "ayah_number": 7,
      "text": "وَإِنَّهُۥ عَلَىٰ ذَٰلِكَ لَشَهِيدٞ"
    },
    {
      "ayah_number": 8,
      "text": "وَإِنَّهُۥ لِحُبِّ اِ۬لْخَيْرِ لَشَدِيدٌۖ"
    },
    {
      "ayah_number": 9,
      "text": "اَفَلَا يَعْلَمُ إِذَا بُعْثِرَ مَا فِے اِ۬لْقُبُورِ"
    },
    {
      "ayah_number": 10,
      "text": "وَحُصِّلَ مَا فِے اِ۬لصُّدُورِ"
    },
    {
      "ayah_number": 11,
      "text": "إِنَّ رَبَّهُم بِهِمْ يَوْمَئِذٖ لَّخَبِيرٌۖ"
    }
  ]
}