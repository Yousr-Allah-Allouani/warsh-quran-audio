{
  "surah_number": 78,
  "name": "اُ۬لنَّبَإِ",
  "number_of_ayahs": 40,
  "ayahs": [
    {
      "ayah_number": 1,
      "text": "عَمَّۖ يَتَسَآءَلُونَ"
    },
    {
      "ayah_number": 2,
      "text": "عَنِ اِ۬لنَّبَإِ اِ۬لْعَظِيمِ"
    },
    {
      "ayah_number": 3,
      "text": "اِ۬لذِے هُمْ فِيهِ مُخْتَلِفُونَۖ"
    },
    {
      "ayah_number": 4,
      "text": "كَلَّا سَيَعْلَمُونَ"
    },
    {
      "ayah_number": 5,
      "text": "ثُمَّ كَلَّا سَيَعْلَمُونَۖ"
    },
    {
      "ayah_number": 6,
      "text": "أَلَمْ نَجْعَلِ اِ۬لَارْضَ مِهَٰداٗ"
    },
    {
      "ayah_number": 7,
      "text": "وَالْجِبَالَ أَوْتَاداٗ"
    },
    {
      "ayah_number": 8,
      "text": "وَخَلَقْنَٰكُمُۥٓ أَزْوَٰجاٗ"
    },
    {
      "ayah_number": 9,
      "text": "وَجَعَلْنَا نَوْمَكُمْ سُبَاتاٗ"
    },
    {
      "ayah_number": 10,
      "text": "وَجَعَلْنَا اَ۬ليْلَ لِبَاساٗ"
    },
    {
      "ayah_number": 11,
      "text": "وَجَعَلْنَا اَ۬لنَّهَارَ مَعَاشاٗ"
    },
    {
      "ayah_number": 12,
      "text": "وَبَنَيْنَا فَوْقَكُمْ سَبْعاٗ شِدَاداٗ"
    },
    {
      "ayah_number": 13,
      "text": "وَجَعَلْنَا سِرَاجاٗ وَهَّاجاٗ"
    },
    {
      "ayah_number": 14,
      "text": "وَأَنزَلْنَا مِنَ اَ۬لْمُعْصِرَٰتِ مَآءٗ ثَجَّاجاٗ"
    },
    {
      "ayah_number": 15,
      "text": "لِّنُخْرِجَ بِهِۦ حَبّاٗ وَنَبَاتاٗ"
    },
    {
      "ayah_number": 16,
      "text": "وَجَنَّٰتٍ اَلْفَافاًۖ"
    },
    {
      "ayah_number": 17,
      "text": "اِنَّ يَوْمَ اَ۬لْفَصْلِ كَانَ مِيقَٰتاٗ"
    },
    {
      "ayah_number": 18,
      "text": "يَوْمَ يُنفَخُ فِے اِ۬لصُّورِ فَتَاتُونَ أَفْوَاجاٗ"
    },
    {
      "ayah_number": 19,
      "text": "وَفُتِّحَتِ اِ۬لسَّمَآءُ فَكَانَتَ اَبْوَٰباٗ"
    },
    {
      "ayah_number": 20,
      "text": "وَسُيِّرَتِ اِ۬لْجِبَالُ فَكَانَتْ سَرَاباًۖ"
    },
    {
      "ayah_number": 21,
      "text": "اِنَّ جَهَنَّمَ كَانَتْ مِرْصَاداٗ"
    },
    {
      "ayah_number": 22,
      "text": "لِّلطَّٰغِينَ مَـَٔاباٗ"
    },
    {
      "ayah_number": 23,
      "text": "لَّٰبِثِينَ فِيهَآ أَحْقَاباٗۖ"
    },
    {
      "ayah_number": 24,
      "text": "لَّا يَذُوقُونَ فِيهَا بَرْداٗ وَلَا شَرَاباً"
    },
    {
      "ayah_number": 25,
      "text": "اِلَّا حَمِيماٗ وَغَسَاقاٗ"
    },
    {
      "ayah_number": 26,
      "text": "جَزَآءٗ وِفَاقاًۖ"
    },
    {
      "ayah_number": 27,
      "text": "اِنَّهُمْ كَانُواْ لَا يَرْجُونَ حِسَاباٗ"
    },
    {
      "ayah_number": 28,
      "text": "وَكَذَّبُواْ بِـَٔايَٰتِنَا كِذَّاباٗۖ"
    },
    {
      "ayah_number": 29,
      "text": "وَكُلَّ شَےْءٍ اَحْصَيْنَٰهُ كِتَٰباٗۖ"
    },
    {
      "ayah_number": 30,
      "text": "فَذُوقُواْ فَلَن نَّزِيدَكُمُۥٓ إِلَّا عَذَاباًۖ"
    },
    {
      "ayah_number": 31,
      "text": "اِنَّ لِلْمُتَّقِينَ مَفَازاً"
    },
    {
      "ayah_number": 32,
      "text": "حَدَآئِقَ وَأَعْنَٰباٗ"
    },
    {
      "ayah_number": 33,
      "text": "وَكَوَاعِبَ أَتْرَاباٗ"
    },
    {
      "ayah_number": 34,
      "text": "وَكَأْساٗ دِهَاقاٗ"
    },
    {
      "ayah_number": 35,
      "text": "لَّا يَسْمَعُونَ فِيهَا لَغْواٗ وَلَا كِذَّاباٗۖ"
    },
    {
      "ayah_number": 36,
      "text": "جَزَآءٗ مِّن رَّبِّكَ عَطَآءً حِسَاباٗۖ"
    },
    {
      "ayah_number": 37,
      "text": "رَّبُّ اُ۬لسَّمَٰوَٰتِ وَالَارْضِ وَمَا بَيْنَهُمَاۖ اَ۬لرَّحْمَٰنُ لَا يَمْلِكُونَ مِنْهُ خِطَاباٗۖ"
    },
    {
      "ayah_number": 38,
      "text": "يَوْمَ يَقُومُ اُ۬لرُّوحُ وَالْمَلَٰٓئِكَةُ صَفّاٗ لَّا يَتَكَلَّمُونَ إِلَّا مَنَ اَذِنَ لَهُ اُ۬لرَّحْمَٰنُ وَقَالَ صَوَاباٗۖ"
    },
    {
      "ayah_number": 39,
      "text": "ذَٰلِكَ اَ۬لْيَوْمُ اُ۬لْحَقُّۖ فَمَن شَآءَ اَ۪تَّخَذَ إِلَىٰ رَبِّهِۦ مَـَٔاباًۖ"
    },
    {
      "ayah_number": 40,
      "text": "اِنَّآ أَنذَرْنَٰكُمْ عَذَاباٗ قَرِيباٗ يَوْمَ يَنظُرُ اُ۬لْمَرْءُ مَا قَدَّمَتْ يَدَٰهُ وَيَقُولُ اُ۬لْكَافِرُ يَٰلَيْتَنِے كُنتُ تُرَٰباٗۖ"
    }
  ]
}