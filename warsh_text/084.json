{
  "surah_number": 84,
  "name": "اُ۬لِانشِقَاقِ",
  "number_of_ayahs": 25,
  "ayahs": [
    {
      "ayah_number": 1,
      "text": "إِذَا اَ۬لسَّمَآءُ اُ۪نشَقَّتْ"
    },
    {
      "ayah_number": 2,
      "text": "وَأَذِنَتْ لِرَبِّهَا وَحُقَّتْ"
    },
    {
      "ayah_number": 3,
      "text": "وَإِذَا اَ۬لَارْضُ مُدَّتْ"
    },
    {
      "ayah_number": 4,
      "text": "وَأَلْقَتْ مَا فِيهَا وَتَخَلَّتْ"
    },
    {
      "ayah_number": 5,
      "text": "وَأَذِنَتْ لِرَبِّهَا وَحُقَّتْۖ"
    },
    {
      "ayah_number": 6,
      "text": "يَٰٓأَيُّهَا اَ۬لِانسَٰنُ إِنَّكَ كَادِحٌ اِلَىٰ رَبِّكَ كَدْحاٗ فَمُلَٰقِيهِۖ"
    },
    {
      "ayah_number": 7,
      "text": "فَأَمَّا مَنُ ا۟وتِيَ كِتَٰبَهُۥ بِيَمِينِهِۦ"
    },
    {
      "ayah_number": 8,
      "text": "فَسَوْفَ يُحَاسَبُ حِسَاباٗ يَسِيراٗ"
    },
    {
      "ayah_number": 9,
      "text": "وَيَنقَلِبُ إِلَىٰٓ أَهْلِهِۦ مَسْرُوراٗۖ"
    },
    {
      "ayah_number": 10,
      "text": "وَأَمَّا مَنُ ا۟وتِيَ كِتَٰبَهُۥ وَرَآءَ ظَهْرِهِۦ"
    },
    {
      "ayah_number": 11,
      "text": "فَسَوْفَ يَدْعُواْ ثُبُوراٗ"
    },
    {
      "ayah_number": 12,
      "text": "وَيُصَلَّىٰ سَعِيراًۖ"
    },
    {
      "ayah_number": 13,
      "text": "اِنَّهُۥ كَانَ فِےٓ أَهْلِهِۦ مَسْرُوراًۖ"
    },
    {
      "ayah_number": 14,
      "text": "اِنَّهُۥ ظَنَّ أَن لَّنْ يَّحُورَ"
    },
    {
      "ayah_number": 15,
      "text": "بَل۪ىٰٓۖ إِنَّ رَبَّهُۥ كَانَ بِهِۦ بَصِيراٗۖ"
    },
    {
      "ayah_number": 16,
      "text": "فَلَآ أُقْسِمُ بِالشَّفَقِ"
    },
    {
      "ayah_number": 17,
      "text": "وَاليْلِ وَمَا وَسَقَ"
    },
    {
      "ayah_number": 18,
      "text": "وَالْقَمَرِ إِذَا اَ۪تَّسَقَ"
    },
    {
      "ayah_number": 19,
      "text": "لَتَرْكَبُنَّ طَبَقاً عَن طَبَقٖۖ"
    },
    {
      "ayah_number": 20,
      "text": "فَمَا لَهُمْ لَا يُومِنُونَ"
    },
    {
      "ayah_number": 21,
      "text": "وَإِذَا قُرِۓَ عَلَيْهِمُ اُ۬لْقُرْءَانُ لَا يَسْجُدُونَۖ۩"
    },
    {
      "ayah_number": 22,
      "text": "بَلِ اِ۬لذِينَ كَفَرُواْ يُكَذِّبُونَ"
    },
    {
      "ayah_number": 23,
      "text": "وَاللَّهُ أَعْلَمُ بِمَا يُوعُونَۖ"
    },
    {
      "ayah_number": 24,
      "text": "فَبَشِّرْهُم بِعَذَابٍ اَلِيمٍۖ"
    },
    {
      "ayah_number": 25,
      "text": "اِلَّا اَ۬لذِينَ ءَامَنُواْ وَعَمِلُواْ اُ۬لصَّٰلِحَٰتِ لَهُمُۥٓ أَجْرٌ غَيْرُ مَمْنُونٖۖ"
    }
  ]
}