{
  "surah_number": 94,
  "name": "اُ۬لشَّرْحِ",
  "number_of_ayahs": 8,
  "ayahs": [
    {
      "ayah_number": 1,
      "text": "اَلَمْ نَشْرَحْ لَكَ صَدْرَكَ"
    },
    {
      "ayah_number": 2,
      "text": "وَوَضَعْنَا عَنكَ وِزْرَكَ"
    },
    {
      "ayah_number": 3,
      "text": "اَ۬لذِےٓ أَنقَضَ ظَهْرَكَ"
    },
    {
      "ayah_number": 4,
      "text": "وَرَفَعْنَا لَكَ ذِكْرَكَۖ"
    },
    {
      "ayah_number": 5,
      "text": "فَإِنَّ مَعَ اَ۬لْعُسْرِ يُسْراً"
    },
    {
      "ayah_number": 6,
      "text": "اِنَّ مَعَ اَ۬لْعُسْرِ يُسْراٗۖ"
    },
    {
      "ayah_number": 7,
      "text": "فَإِذَا فَرَغْتَ فَانصَبْ"
    },
    {
      "ayah_number": 8,
      "text": "وَإِلَىٰ رَبِّكَ فَارْغَبْۖ"
    }
  ]
}