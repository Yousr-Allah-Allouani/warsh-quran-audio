{
  "surah_number": 74,
  "name": "اُ۬لْمُدَّثِّرِ",
  "number_of_ayahs": 55,
  "ayahs": [
    {
      "ayah_number": 1,
      "text": "يَٰٓأَيُّهَا اَ۬لْمُدَّثِّرُ"
    },
    {
      "ayah_number": 2,
      "text": "قُمْ فَأَنذِرْۖ"
    },
    {
      "ayah_number": 3,
      "text": "وَرَبَّكَ فَكَبِّرْۖ"
    },
    {
      "ayah_number": 4,
      "text": "وَثِيَابَكَ فَطَهِّرْۖ"
    },
    {
      "ayah_number": 5,
      "text": "وَالرِّجْزَ فَاهْجُرْۖ"
    },
    {
      "ayah_number": 6,
      "text": "وَلَا تَمْنُن تَسْتَكْثِرُۖ"
    },
    {
      "ayah_number": 7,
      "text": "وَلِرَبِّكَ فَاصْبِرْۖ"
    },
    {
      "ayah_number": 8,
      "text": "فَإِذَا نُقِرَ فِے اِ۬لنَّاقُورِ"
    },
    {
      "ayah_number": 9,
      "text": "فَذَٰلِكَ يَوْمَئِذٖ يَوْمٌ عَسِيرٌ"
    },
    {
      "ayah_number": 10,
      "text": "عَلَى اَ۬لْكٰ۪فِرِينَ غَيْرُ يَسِيرٖۖ"
    },
    {
      "ayah_number": 11,
      "text": "ذَرْنِے وَمَنْ خَلَقْتُ وَحِيداٗ"
    },
    {
      "ayah_number": 12,
      "text": "وَجَعَلْتُ لَهُۥ مَالاٗ مَّمْدُوداٗ"
    },
    {
      "ayah_number": 13,
      "text": "وَبَنِينَ شُهُوداٗ"
    },
    {
      "ayah_number": 14,
      "text": "وَمَهَّدتُّ لَهُۥ تَمْهِيداٗ"
    },
    {
      "ayah_number": 15,
      "text": "ثُمَّ يَطْمَعُ أَنَ اَزِيدَ"
    },
    {
      "ayah_number": 16,
      "text": "كَلَّآۖ إِنَّهُۥ كَانَ لِأٓيَٰتِنَا عَنِيداٗۖ"
    },
    {
      "ayah_number": 17,
      "text": "سَأُرْهِقُهُۥ صَعُوداًۖ"
    },
    {
      "ayah_number": 18,
      "text": "اِنَّهُۥ فَكَّرَ وَقَدَّرَ"
    },
    {
      "ayah_number": 19,
      "text": "فَقُتِلَ كَيْفَ قَدَّرَ"
    },
    {
      "ayah_number": 20,
      "text": "ثُمَّ قُتِلَ كَيْفَ قَدَّرَ"
    },
    {
      "ayah_number": 21,
      "text": "ثُمَّ نَظَرَ"
    },
    {
      "ayah_number": 22,
      "text": "ثُمَّ عَبَسَ وَبَسَرَ"
    },
    {
      "ayah_number": 23,
      "text": "ثُمَّ أَدْبَرَ وَاسْتَكْبَرَ"
    },
    {
      "ayah_number": 24,
      "text": "فَقَالَ إِنْ هَٰذَآ إِلَّا سِحْرٞ يُوثَرُ"
    },
    {
      "ayah_number": 25,
      "text": "إِنْ هَٰذَآ إِلَّا قَوْلُ اُ۬لْبَشَرِۖ"
    },
    {
      "ayah_number": 26,
      "text": "سَأُصْلِيهِ سَقَرَۖ"
    },
    {
      "ayah_number": 27,
      "text": "وَمَآ أَدْر۪يٰكَ مَا سَقَرُۖ"
    },
    {
      "ayah_number": 28,
      "text": "لَا تُبْقِے وَلَا تَذَرُۖ"
    },
    {
      "ayah_number": 29,
      "text": "لَوَّاحَةٞ لِّلْبَشَرِۖ"
    },
    {
      "ayah_number": 30,
      "text": "عَلَيْهَا تِسْعَةَ عَشَرَۖ"
    },
    {
      "ayah_number": 31,
      "text": "وَمَا جَعَلْنَآ أَصْحَٰبَ اَ۬لنّ۪ارِ إِلَّا مَلَٰٓئِكَةٗۖ وَمَا جَعَلْنَا عِدَّتَهُمُۥٓ إِلَّا فِتْنَةٗ لِّلذِينَ كَفَرُواْ لِيَسْتَيْقِنَ اَ۬لذِينَ أُوتُواْ اُ۬لْكِتَٰبَ وَيَزْدَادَ اَ۬لذِينَ ءَامَنُوٓاْ إِيمَٰناٗ وَلَا يَرْتَابَ اَ۬لذِينَ أُوتُواْ اُ۬لْكِتَٰبَ وَالْمُومِنُونَ وَلِيَقُولَ اَ۬لذِينَ فِے قُلُوبِهِم مَّرَضٞ وَالْكَٰفِرُونَ مَاذَآ أَرَادَ اَ۬للَّهُ بِهَٰذَا مَثَلاٗۖ كَذَٰلِكَ يُضِلُّ اُ۬للَّهُ مَنْ يَّشَآءُ وَيَهْدِے مَنْ يَّشَآءُۖ وَمَا يَعْلَمُ جُنُودَ رَبِّكَ إِلَّا هُوَۖ وَمَا هِيَ إِلَّا ذِكْر۪ىٰ لِلْبَشَرِۖ"
    },
    {
      "ayah_number": 32,
      "text": "كَلَّا وَالْقَمَرِ"
    },
    {
      "ayah_number": 33,
      "text": "وَاليْلِ إِذَ اَدْبَرَ"
    },
    {
      "ayah_number": 34,
      "text": "وَالصُّبْحِ إِذَآ أَسْفَرَ"
    },
    {
      "ayah_number": 35,
      "text": "إِنَّهَا لَإِحْدَى اَ۬لْكُبَرِ"
    },
    {
      "ayah_number": 36,
      "text": "نَذِيراٗ لِّلْبَشَرِ"
    },
    {
      "ayah_number": 37,
      "text": "لِمَن شَآءَ مِنكُمُۥٓ أَنْ يَّتَقَدَّمَ أَوْ يَتَأَخَّرَۖ"
    },
    {
      "ayah_number": 38,
      "text": "كُلُّ نَفْسِۢ بِمَا كَسَبَتْ رَهِينَةٌ"
    },
    {
      "ayah_number": 39,
      "text": "اِلَّآ أَصْحَٰبَ اَ۬لْيَمِينِۖ"
    },
    {
      "ayah_number": 40,
      "text": "فِے جَنَّٰتٖ يَتَسَآءَلُونَ عَنِ اِ۬لْمُجْرِمِينَ"
    },
    {
      "ayah_number": 41,
      "text": "مَا سَلَكَكُمْ فِے سَقَرَۖ"
    },
    {
      "ayah_number": 42,
      "text": "قَالُواْ لَمْ نَكُ مِنَ اَ۬لْمُصَلِّينَ"
    },
    {
      "ayah_number": 43,
      "text": "وَلَمْ نَكُ نُطْعِمُ اُ۬لْمِسْكِينَ"
    },
    {
      "ayah_number": 44,
      "text": "وَكُنَّا نَخُوضُ مَعَ اَ۬لْخَآئِضِينَ"
    },
    {
      "ayah_number": 45,
      "text": "وَكُنَّا نُكَذِّبُ بِيَوْمِ اِ۬لدِّينِ"
    },
    {
      "ayah_number": 46,
      "text": "حَتَّىٰٓ أَت۪يٰنَا اَ۬لْيَقِينُۖ"
    },
    {
      "ayah_number": 47,
      "text": "فَمَا تَنفَعُهُمْ شَفَٰعَةُ اُ۬لشَّٰفِعِينَۖ"
    },
    {
      "ayah_number": 48,
      "text": "فَمَا لَهُمْ عَنِ اِ۬لتَّذْكِرَةِ مُعْرِضِينَ"
    },
    {
      "ayah_number": 49,
      "text": "كَأَنَّهُمْ حُمُرٞ مُّسْتَنفَرَةٞ"
    },
    {
      "ayah_number": 50,
      "text": "فَرَّتْ مِن قَسْوَرَةِۢۖ"
    },
    {
      "ayah_number": 51,
      "text": "بَلْ يُرِيدُ كُلُّ اُ۪مْرِےٕٖ مِّنْهُمُۥٓ أَنْ يُّوت۪ىٰ صُحُفاٗ مُّنَشَّرَةٗۖ"
    },
    {
      "ayah_number": 52,
      "text": "كَلَّا بَل لَّا يَخَافُونَ اَ۬لَاخِرَةَۖ"
    },
    {
      "ayah_number": 53,
      "text": "كَلَّآ إِنَّهُۥ تَذْكِرَةٞۖ"
    },
    {
      "ayah_number": 54,
      "text": "فَمَن شَآءَ ذَكَرَهُۥۖ"
    },
    {
      "ayah_number": 55,
      "text": "وَمَا تَذْكُرُونَ إِلَّآ أَنْ يَّشَآءَ اَ۬للَّهُۖ هُوَ أَهْلُ اُ۬لتَّقْو۪ىٰ وَأَهْلُ اُ۬لْمَغْفِرَةِۖ"
    }
  ]
}